const locationPaths = {
    'front-house': {
        backTo: [], // –Ω–∞—á–∞–ª—å–Ω–∞—è —Ç–æ—á–∫–∞, –≤–æ–∑–≤—Ä–∞—Ç–∞ –Ω–µ—Ç
        forwardTo: ['hall'] // –º–æ–∂–Ω–æ –∏–¥—Ç–∏ —Ç–æ–ª—å–∫–æ –≤ –¥–æ–º
    },
    'hall': {
        backTo: ['front-house'], // –≤–æ–∑–≤—Ä–∞—Ç –Ω–∞ —É–ª–∏—Ü—É
        forwardTo: ['leftroom', 'rightroom'] // –º–æ–∂–Ω–æ –∏–¥—Ç–∏ –≤ –∫–æ–º–Ω–∞—Ç—É –æ–¥–Ω—É –∏–∑ –¥–≤—É—Ö
    },
    'leftroom': {
        backTo: ['hall'], // –≤–æ–∑–≤—Ä–∞—Ç –≤ —Ö–æ–ª–ª
        forwardTo: [] // –¥–∞–ª—å—à–µ –ø—É—Ç–∏ –Ω–µ—Ç
    },
    'rightroom': {
        backTo: ['hall'], // –≤–æ–∑–≤—Ä–∞—Ç –≤ —Ö–æ–ª–ª
        forwardTo: ['drawer'] // –º–æ–∂–Ω–æ –ø–µ—Ä–µ–π—Ç–∏ –≤ –∫–æ–º–æ–¥
    },
    'drawer': {
        backTo: ['rightroom'], // –≤–æ–∑–≤—Ä–∞—Ç –≤ –ø—Ä–∞–≤—É—é –∫–æ–º–Ω–∞—Ç—É
        forwardTo: [] // –¥–∞–ª—å—à–µ –ø—É—Ç–∏ –Ω–µ—Ç
    },
    'wardrobe': {
        backTo: ['leftroom'], // –≤–æ–∑–≤—Ä–∞—Ç –≤ –ª–µ–≤—É—é –∫–æ–º–Ω–∞—Ç—É
        forwardTo: [] // –¥–∞–ª—å—à–µ –ø—É—Ç–∏ –Ω–µ—Ç
    },
    //'new-location?': {
    //    backTo: ['hall?'],
    //    forwardTo: [?]
    //},
};

// –£—Ç–∏–ª–∏—Ç–Ω—ã–π –∫–ª–∞—Å—Å –¥–ª—è –æ–±—â–∏—Ö –º–µ—Ç–æ–¥–æ–≤
class NavigationUtils {
    static createNavigationZones(scene) {
        const currentLocation = scene.location;
        const neighbors = locationMap[currentLocation].neighbors;
        const transitions = locationMap[currentLocation].transitions;

        neighbors.forEach(neighbor => {
            const zoneName = locationMap[neighbor].name;
            const transition = transitions[neighbor];
            const points = transition.points;

            // –°–æ–∑–¥–∞–µ–º –∑–æ–Ω—É –Ω–∞ –æ—Å–Ω–æ–≤–µ –ø–æ–ª–∏–≥–æ–Ω–∞
            const navigationZone = scene.add.zone(0, 0, 1, 1)
                .setOrigin(0)
                .setInteractive(new Phaser.Geom.Polygon(points), Phaser.Geom.Polygon.Contains);

            // –†–∏—Å—É–µ–º –≤–∏–¥–∏–º—É—é –≥—Ä–∞–Ω–∏—Ü—É –∑–æ–Ω—ã (–¥–ª—è –æ—Ç–ª–∞–¥–∫–∏)
            const graphics = scene.add.graphics();
            graphics.lineStyle(2, 0xff0000);
            graphics.beginPath();
            graphics.moveTo(points[0].x, points[0].y);
            
            // –†–∏—Å—É–µ–º –ª–∏–Ω–∏–∏ –º–µ–∂–¥—É —Ç–æ—á–∫–∞–º–∏
            points.forEach((point, index) => {
                const nextPoint = points[(index + 1) % points.length];
                graphics.lineTo(nextPoint.x, nextPoint.y);
            });
            
            graphics.closePath();
            graphics.strokePath();

            // –û–±—Ä–∞–±–æ—Ç–∫–∞ –∫–ª–∏–∫–æ–≤
            navigationZone.on('pointerdown', () => {
                scene.cameras.main.fadeOut(1000);
                scene.time.delayedCall(1000, () => {
                    scene.scene.start('GameScene', {
                        location: neighbor,
                        history: [...(scene.locationHistory || []), currentLocation]
                    });
                });
            });

            // –î–æ–±–∞–≤–ª—è–µ–º —Å—Ç—Ä–µ–ª–∫–∏ –∏ —Ç–µ–∫—Å—Ç –¥–ª—è –æ–±—Ä–∞—Ç–Ω–æ–≥–æ –Ω–∞–ø—Ä–∞–≤–ª–µ–Ω–∏—è
            const isBackwardDirection = locationPaths[currentLocation].backTo.includes(neighbor);

            if (isBackwardDirection) {
                // –ù–∞—Ö–æ–¥–∏–º —Ü–µ–Ω—Ç—Ä –ø–æ–ª–∏–≥–æ–Ω–∞ –¥–ª—è —Ä–∞–∑–º–µ—â–µ–Ω–∏—è —Å—Ç—Ä–µ–ª–∫–∏ –∏ —Ç–µ–∫—Å—Ç–∞
                const centerX = points.reduce((sum, point) => sum + point.x, 0) / points.length;
                const centerY = points.reduce((sum, point) => sum + point.y, 0) / points.length;

                const edgeThreshold = 100;
                const distanceToLeft = centerX;
                const distanceToRight = GAME_CONFIG.width - centerX;
                const distanceToBottom = GAME_CONFIG.height - centerY;

                const arrow = scene.add.sprite(centerX, centerY, 'arrow')
                    .setDepth(1)
                    .setScale(1);

                let angle = 0;
                let textOffsetY = -15;

                if (distanceToLeft <= edgeThreshold) {
                    angle = -90;
                } else if (distanceToRight <= edgeThreshold) {
                    angle = 90;
                } else if (distanceToBottom <= edgeThreshold) {
                    angle = 180;
                }

                arrow.setAngle(angle);

                const text = scene.add.text(centerX, centerY + textOffsetY, zoneName, {
                    fontSize: '12px',
                    fill: '#ffd700',
                    align: 'center'
                }).setOrigin(0.5);

                navigationZone
                    .on('pointerover', () => {
                        arrow.setTint(0xffff00);
                        text.setTint(0xffff00);
                    })
                    .on('pointerout', () => {
                        arrow.clearTint();
                        text.clearTint();
                    });
            }
        });
    }
}

// JournalSystem.js
// –ö–ª–∞—Å—Å —Å–∏—Å—Ç–µ–º—ã –¥–Ω–µ–≤–Ω–∏–∫–∞ –¥–ª—è –∏–≥—Ä—ã –Ω–∞ Phaser —Å –ø–æ–¥—Ä–æ–±–Ω—ã–º–∏ –∫–æ–º–º–µ–Ω—Ç–∞—Ä–∏—è–º–∏

class JournalSystem {
    constructor(scene) {
        this.scene = scene;             // –ì–ª–∞–≤–Ω–∞—è —Å—Ü–µ–Ω–∞ –∏–≥—Ä—ã (–æ–±—ã—á–Ω–æ GameScene)
        this.entries = [];              // –ú–∞—Å—Å–∏–≤ –≤—Å–µ—Ö –∑–∞–ø–∏—Å–µ–π –≤ –¥–Ω–µ–≤–Ω–∏–∫–µ
        this.uniqueEntries = new Set(); // –ú–Ω–æ–∂–µ—Å—Ç–≤–æ –¥–ª—è —É–Ω–∏–∫–∞–ª—å–Ω—ã—Ö –∑–∞–ø–∏—Å–µ–π (–Ω–µ—Ç –¥—É–±–ª–µ–π)
        this.isOpen = false;            // –§–ª–∞–≥: –¥–Ω–µ–≤–Ω–∏–∫ –æ—Ç–∫—Ä—ã—Ç –∏–ª–∏ –∑–∞–∫—Ä—ã—Ç
        this.createJournalButton();     // –°–æ–∑–¥–∞—ë–º –∫–Ω–æ–ø–∫—É –¥–Ω–µ–≤–Ω–∏–∫–∞ –ø—Ä–∏ –∏–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏–∏
    }

    // –°–æ–∑–¥–∞–Ω–∏–µ –∫–Ω–æ–ø–∫–∏ –¥–Ω–µ–≤–Ω–∏–∫–∞ –Ω–∞ —ç–∫—Ä–∞–Ω–µ
    createJournalButton() {
        const buttonX = 190;
        const buttonY = 55;
        const buttonSize = 96; // –†–∞–∑–º–µ—Ä –∫–Ω–æ–ø–∫–∏, –º–æ–∂–Ω–æ –ø–æ–¥–æ–≥–Ω–∞—Ç—å –ø–æ–¥ UI

        // –°–æ–∑–¥–∞—ë–º —Å–ø—Ä–∞–π—Ç –∫–Ω–æ–ø–∫–∏ –∏ –Ω–∞—Å—Ç—Ä–∞–∏–≤–∞–µ–º –µ–≥–æ –∏–Ω—Ç–µ—Ä–∞–∫—Ç–∏–≤–Ω–æ—Å—Ç—å
        this.journalButton = this.scene.add.sprite(buttonX, buttonY, 'JournalButton')
            .setInteractive()
            .setDepth(100) // –ü–æ–≤–µ—Ä—Ö –¥—Ä—É–≥–∏—Ö —ç–ª–µ–º–µ–Ω—Ç–æ–≤ UI
            .setDisplaySize(buttonSize, buttonSize);

        // –ù–∞–≤–µ–¥–µ–Ω–∏–µ –º—ã—à–∏ ‚Äî –ø–æ–¥—Å–≤–µ—á–∏–≤–∞–µ–º –∫–Ω–æ–ø–∫—É
        this.journalButton.on('pointerover', () => {
            if (!this.journalButton.isTinted) {
                this.journalButton.setTint(0xcccccc);
            }
        });

        // –£–≤–æ–¥–∏–º –º—ã—à—å ‚Äî –≤–æ–∑–≤—Ä–∞—â–∞–µ–º –∏—Å—Ö–æ–¥–Ω—ã–π —Ü–≤–µ—Ç –∏ —Ä–∞–∑–º–µ—Ä
        this.journalButton.on('pointerout', () => {
            this.journalButton.clearTint();
            this.journalButton.setDisplaySize(buttonSize, buttonSize);
        });

        // –ù–∞–∂–∞—Ç–∏–µ ‚Äî —É–º–µ–Ω—å—à–∞–µ–º –∏ –∑–∞—Ç–µ–º–Ω—è–µ–º –∫–Ω–æ–ø–∫—É
        this.journalButton.on('pointerdown', () => {
            this.journalButton.setDisplaySize(buttonSize * 0.95, buttonSize * 0.95);
            this.journalButton.setTint(0x999999);
        });

        // –û—Ç–ø—É—Å–∫–∞–Ω–∏–µ ‚Äî –≤–æ–∑–≤—Ä–∞—â–∞–µ–º –Ω–æ—Ä–º–∞–ª—å–Ω—ã–π –≤–∏–¥ –∏ –æ—Ç–∫—Ä—ã–≤–∞–µ–º/–∑–∞–∫—Ä—ã–≤–∞–µ–º –¥–Ω–µ–≤–Ω–∏–∫
        this.journalButton.on('pointerup', () => {
            this.journalButton.setDisplaySize(buttonSize, buttonSize);
            this.journalButton.clearTint();
            this.toggleJournal();
        });
    }

    // –í–∏–∑—É–∞–ª—å–Ω—ã–π —ç—Ñ—Ñ–µ–∫—Ç –¥–ª—è –Ω–æ–≤–æ–π –∑–∞–ø–∏—Å–∏ (—Å–≤–µ—á–µ–Ω–∏–µ –∏ –ø—É–ª—å—Å–∞—Ü–∏—è)
    showNewEntryEffect() {
        const glowColor = 0xFFE666; // –Ø—Ä–∫–æ-–∂—ë–ª—Ç—ã–π –¥–ª—è —ç—Ñ—Ñ–µ–∫—Ç–∞
        this.journalButton.setTint(glowColor);

        // –ê–Ω–∏–º–∞—Ü–∏—è: —É–≤–µ–ª–∏—á–µ–Ω–∏–µ, –∑–∞—Ç–µ–º –≤–æ–∑–≤—Ä–∞—â–µ–Ω–∏–µ –∫ –∏—Å—Ö–æ–¥–Ω–æ–º—É —Å–æ—Å—Ç–æ—è–Ω–∏—é
        this.scene.tweens.add({
            targets: this.journalButton,
            scale: { from: 1, to: 1.1 },
            alpha: { from: 1, to: 0.7, yoyo: true },
            duration: 2000,
            yoyo: true,
            ease: 'Sine.easeInOut',
            onComplete: () => {
                this.journalButton.clearTint();
                this.journalButton.setAlpha(1);
                this.journalButton.setScale(1);
            }
        });
    }

    // –î–æ–±–∞–≤–ª–µ–Ω–∏–µ –∑–∞–ø–∏—Å–∏: —Ç–æ–ª—å–∫–æ –µ—Å–ª–∏ —Ç–∞–∫–æ–π –µ—â—ë –Ω–µ—Ç
    addEntry(text) {
        if (this.uniqueEntries.has(text)) {
            console.log(`–ó–∞–ø–∏—Å—å "${text}" —É–∂–µ —Å—É—â–µ—Å—Ç–≤—É–µ—Ç, –Ω–µ –¥–æ–±–∞–≤–ª—è–µ–º.`);
            return;
        }
        this.entries.push(text);           // –°–æ—Ö—Ä–∞–Ω—è–µ–º –∑–∞–ø–∏—Å—å
        this.uniqueEntries.add(text);      // –û—Ç–º–µ—á–∞–µ–º –∫–∞–∫ —É–Ω–∏–∫–∞–ª—å–Ω—É—é

        // –ï—Å–ª–∏ –¥–Ω–µ–≤–Ω–∏–∫ –æ—Ç–∫—Ä—ã—Ç ‚Äî –æ–±–Ω–æ–≤–∏—Ç—å –ø–æ–ø–∞–ø —Å –∑–∞–ø–∏—Å—è–º–∏
        if (this.isOpen && this.scene.popupSystem) {
            this.openJournal();
        }

        // –í–∏–∑—É–∞–ª—å–Ω—ã–π —ç—Ñ—Ñ–µ–∫—Ç –Ω–∞ –∫–Ω–æ–ø–∫–µ
        this.showNewEntryEffect();
    }

    // –°–±—Ä–æ—Å –¥–Ω–µ–≤–Ω–∏–∫–∞ (–Ω–∞–ø—Ä–∏–º–µ—Ä, –ø—Ä–∏ —Ä–µ—Å—Ç–∞—Ä—Ç–µ –∏–≥—Ä—ã)
    resetJournal() {
        this.entries = [];
        this.uniqueEntries.clear();
    }

    // –û—Ç–∫—Ä—ã—Ç—å/–∑–∞–∫—Ä—ã—Ç—å –¥–Ω–µ–≤–Ω–∏–∫ (–ø–æ –∫–ª–∏–∫—É –Ω–∞ –∫–Ω–æ–ø–∫—É)
    toggleJournal() {
        if (this.isOpen) {
            this.closeJournal();
        } else {
            this.openJournal();
        }
    }

    // –û—Ç–∫—Ä—ã—Ç–∏–µ –¥–Ω–µ–≤–Ω–∏–∫–∞ (—á–µ—Ä–µ–∑ popupSystem)
    openJournal() {
        if (!this.scene.popupSystem) return;

        this.scene.popupSystem.create('JOURNAL', {
            data: this.entries, // –°–ø–∏—Å–æ–∫ –∑–∞–ø–∏—Å–µ–π –æ—Ç–ø—Ä–∞–≤–ª—è–µ–º –≤ –ø–æ–ø–∞–ø
            onClose: () => {
                this.isOpen = false; // –ü–æ—Å–ª–µ –∑–∞–∫—Ä—ã—Ç–∏—è —Ñ–ª–∞–∂–æ–∫ –∑–∞–∫—Ä—ã—Ç
            }
        });

        this.isOpen = true;
    }

    // –ó–∞–∫—Ä—ã—Ç–∏–µ –¥–Ω–µ–≤–Ω–∏–∫–∞ (—É–±–∏—Ä–∞–µ–º –ø–æ–ø–∞–ø)
    closeJournal() {
        if (this.scene.popupSystem) {
            this.scene.popupSystem.close();
        }
        this.isOpen = false;
    }
}

class InventorySystem {
    constructor(scene) {
        this.scene = scene;
        this.slots = [];       // –ú–∞—Å—Å–∏–≤ —Å–ª–æ—Ç–æ–≤ –∏–Ω–≤–µ–Ω—Ç–∞—Ä—è
        this.items = [];       // –ú–∞—Å—Å–∏–≤ –ø—Ä–µ–¥–º–µ—Ç–æ–≤ (–º–æ–∂–Ω–æ –∏—Å–ø–æ–ª—å–∑–æ–≤–∞—Ç—å –¥–ª—è –ª–æ–≥–∏–∫–∏)

        // –ù–∞—Å—Ç—Ä–æ–π–∫–∏ –∏–Ω–≤–µ–Ω—Ç–∞—Ä—è
        this.config = {
            slots: 5,
            slotSize: 50,
            padding: 10,
            startX: 10, // –û—Ç—Å—Ç—É–ø —Å–ª–µ–≤–∞
            // –¶–µ–Ω—Ç—Ä–∏—Ä–æ–≤–∞–Ω–∏–µ –ø–æ –≤—ã—Å–æ—Ç–µ —ç–∫—Ä–∞–Ω–∞
            startY: (GAME_CONFIG.height - ((50 + 10) * 5 - 10)) / 2,
            borderColor: 0x888888
        };

        this.createInventoryUI(); // –°–æ–∑–¥–∞—ë–º UI –∏–Ω–≤–µ–Ω—Ç–∞—Ä—è –ø—Ä–∏ –∏–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏–∏
    }

    // –î–æ–±–∞–≤–ª–µ–Ω–∏–µ –ø—Ä–µ–¥–º–µ—Ç–∞ –≤ –∏–Ω–≤–µ–Ω—Ç–∞—Ä—å
    addItem(key, name) {
        // –ù–∞—Ö–æ–¥–∏–º –ø–µ—Ä–≤—ã–π –ø—É—Å—Ç–æ–π —Å–ª–æ—Ç
        const emptySlot = this.slots.find(slot => !slot.item);
        if (!emptySlot) return false;

        // –°–æ–∑–¥–∞—ë–º —Å–ø—Ä–∞–π—Ç –ø—Ä–µ–¥–º–µ—Ç–∞
        const item = this.scene.add.sprite(
            emptySlot.center.x,
            emptySlot.center.y,
            key
        );

        // –ú–∞—Å—à—Ç–∞–±–∏—Ä—É–µ–º –ø—Ä–µ–¥–º–µ—Ç —Ç–∞–∫, —á—Ç–æ–±—ã –æ–Ω –ø–æ–º–µ—Å—Ç–∏–ª—Å—è –≤ —Å–ª–æ—Ç
        const scale = Math.min(
            175 * (100 / 249) / item.width,
            160 * (500 / 1093) / item.height
        ) * 0.9;
        item.setScale(scale);

        // –ü—Ä–µ–¥–º–µ—Ç –≤—ã—à–µ —Ñ–æ–Ω–∞
        item.setDepth(10);

        // –ò–Ω—Ç–µ—Ä—Ñ–µ–π—Å –ø–µ—Ä–µ—Ç–∞—Å–∫–∏–≤–∞–Ω–∏—è
        item.setInteractive({ draggable: true });
        this.scene.input.setDraggable(item);

        // –û—Ç–∫—Ä—ã—Ç–∏–µ –ø–æ–ø–∞–ø–∞ –ø–æ –∫–ª–∏–∫—É –Ω–∞ –ø—Ä–µ–¥–º–µ—Ç
        item.on('pointerdown', (pointer, localX, localY, event) => {
            event.stopPropagation();
            this.showItemPopup(key, name);
        });

        item.on('dragstart', () => {
            item.setTint(0x999999);
            item.setDepth(20); // –í—ã—à–µ –¥—Ä—É–≥–∏—Ö –ø—Ä–µ–¥–º–µ—Ç–æ–≤ –ø—Ä–∏ –ø–µ—Ä–µ—Ç–∞—Å–∫–∏–≤–∞–Ω–∏–∏
        });

        item.on('dragend', (pointer) => {
            item.clearTint();
            item.setDepth(10);
            item.x = emptySlot.center.x;
            item.y = emptySlot.center.y;
        });

        // –°–æ—Ö—Ä–∞–Ω—è–µ–º –ø—Ä–µ–¥–º–µ—Ç –≤ —Å–ª–æ—Ç
        emptySlot.item = {
            sprite: item,
            name: name,
            key: key
        };

        // –î–æ–±–∞–≤–ª—è–µ–º –∑–∞–ø–∏—Å—å –≤ –¥–Ω–µ–≤–Ω–∏–∫ —á–µ—Ä–µ–∑ GameScene!
        const gameScene = this.scene.scene.get('GameScene');
        if (gameScene && gameScene.journalSystem) {
            gameScene.journalSystem.addEntry(`–ù–∞–π–¥–µ–Ω –ø—Ä–µ–¥–º–µ—Ç: ${name}`);
        }

        return true;
    }

    // –ü–æ–∫–∞–∑—ã–≤–∞–µ–º –ø–æ–ø–∞–ø —Å –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏–µ–π –æ –ø—Ä–µ–¥–º–µ—Ç–µ
    showItemPopup(key, name) {
        const gameScene = this.scene.scene.get('GameScene');
        if (!gameScene || !gameScene.popupSystem) return;

        gameScene.popupSystem.create('ITEM', {
            content: key,
            onClose: () => {
                console.log(`–ó–∞–∫—Ä—ã—Ç –ø–æ–ø–∞–ø –ø—Ä–µ–¥–º–µ—Ç–∞: ${name}`);
            }
        });
    }

    // –ê–Ω–∏–º–∞—Ü–∏—è –ø–µ—Ä–µ–¥–∞—á–∏ –ø—Ä–µ–¥–º–µ—Ç–∞ –ø–µ—Ä—Å–æ–Ω–∞–∂—É
    giveItemToCharacter(item, slot) {
        this.scene.tweens.add({
            targets: item,
            alpha: 0,
            scale: 0,
            duration: 300,
            ease: 'Power2',
            onComplete: () => {
                item.destroy();
                slot.item = null;
                if (this.scene.onItemGiven) {
                    this.scene.onItemGiven(item.name);
                }
            }
        });
    }

    // –£–¥–∞–ª–µ–Ω–∏–µ –ø—Ä–µ–¥–º–µ—Ç–∞ –ø–æ –∫–ª—é—á—É
    removeItem(key) {
        const slot = this.slots.find(slot => slot.item?.key === key);
        if (!slot) return false;

        if (slot.item.sprite.tooltip) {
            slot.item.sprite.tooltip.destroy();
        }
        slot.item.sprite.destroy();
        slot.item = null;
        return true;
    }
}

let globalEnergySystem = null;

class EnergySystem {
    constructor(scene) {
        this.scene = scene;
        this.INITIAL_ENERGY = 200;
        this.MAX_ENERGY = 200;
        this.REGENERATION_RATE = 1;
        this.REGENERATION_INTERVAL = 10000;
        this.COSTS = {
            SEARCH_ITEM: 5,
            MISS_PENALTY: 10,
            USE_HINT: 10,
            PUZZLE: 20,
            GIVE_ITEM: 5
        };
        this.currentEnergy = this.loadEnergy();
        this.lastUpdateTime = this.loadLastUpdateTime();
        this.updateEnergy();
        this.createEnergyUI();
    }

    updateEnergy() {
        const now = Date.now();
        const timePassed = now - this.lastUpdateTime;
        const energyToAdd = Math.floor(timePassed / this.REGENERATION_INTERVAL);
        if (energyToAdd > 0) {
            this.addEnergy(energyToAdd);
            this.lastUpdateTime = now - (timePassed % this.REGENERATION_INTERVAL);
            this.saveLastUpdateTime();
        }
    }

    createEnergyUI() {
        const energyIconSize = 96;
        const energyIconX = 1730;
        const energyIconY = 55;
        this.energyIcon = this.scene.add.sprite(energyIconX, energyIconY, 'energy-icon')
            .setInteractive()
            .setDepth(100)
            .setDisplaySize(energyIconSize, energyIconSize);
        this.energyIcon.on('pointerover', () => {
            if (!this.energyIcon.isTinted) {
                this.energyIcon.setTint(0xcccccc);
            }
        });
        this.energyIcon.on('pointerout', () => {
            this.energyIcon.clearTint();
        });
        this.energyIcon.on('pointerdown', () => {
            this.energyIcon.setDisplaySize(energyIconSize * 0.95, energyIconSize * 0.95);
            this.energyIcon.setTint(0x999999);
        });
        this.energyIcon.on('pointerup', () => {
            this.energyIcon.setDisplaySize(energyIconSize, energyIconSize);
            this.energyIcon.clearTint();
            this.showEnergyBar();
        });
        this.energyIcon.on('pointerout', () => {
            this.energyIcon.setDisplaySize(energyIconSize, energyIconSize);
            this.energyIcon.clearTint();
        });
        this.energyBar = this.scene.add.graphics().setDepth(100);
        this.energyText = this.scene.add.text(
            GAME_CONFIG.width / 2,
            GAME_CONFIG.height - 110 + 15,
            '',
            {
                fontSize: '18px',
                fill: '#ffffff',
                fontWeight: 'bold'
            }
        ).setDepth(101).setOrigin(0.5);
        this.adButton = this.scene.add.text(
            GAME_CONFIG.width / 2,
            GAME_CONFIG.height - 70,
            '–ü–æ–ª—É—á–∏—Ç—å —ç–Ω–µ—Ä–≥–∏—é –∑–∞ –ø—Ä–æ—Å–º–æ—Ç—Ä —Ä–µ–∫–ª–∞–º—ã',
            {
                fontSize: '16px',
                fill: '#00ff00',
                backgroundColor: '#333333',
                padding: { x: 15, y: 10 }
            }
        )
            .setInteractive()
            .setDepth(100)
            .setOrigin(0.5)
            .setVisible(false)
            .on('pointerdown', () => this.showRewardedAd())
            .on('pointerover', () => this.adButton.setStyle({ fill: '#ffffff' }))
            .on('pointerout', () => this.adButton.setStyle({ fill: '#00ff00' }));
        this.hideEnergyBar();
    }

    showEnergyBar() {
        if (this.currentEnergy < this.MAX_ENERGY) {
            const now = Date.now();
            const timePassed = now - this.lastUpdateTime;
            const energyToAdd = Math.floor(timePassed / this.REGENERATION_INTERVAL) * this.REGENERATION_RATE;
            if (energyToAdd > 0) {
                this.currentEnergy = Math.min(this.MAX_ENERGY, this.currentEnergy + energyToAdd);
                this.lastUpdateTime = now - (timePassed % this.REGENERATION_INTERVAL);
                this.saveEnergy();
                this.saveLastUpdateTime();
            }
        }
        if (this.energyBar) {
            this.energyBar.visible = true;
            this.updateEnergyBar();
        }
        if (this.energyText) {
            this.energyText.visible = true;
        }
        if (this.adButton) {
            this.adButton.visible = true;
        }
        if (this.hideTimer) {
            this.scene.time.removeEvent(this.hideTimer);
        }
        this.hideTimer = this.scene.time.delayedCall(5000, () => {
            this.hideEnergyBar();
        }, [], this);
    }

    hideEnergyBar() {
        if (this.energyBar) this.energyBar.visible = false;
        if (this.energyText) this.energyText.visible = false;
        if (this.adButton) this.adButton.visible = false;
        if (this.hideTimer) {
            this.scene.time.removeEvent(this.hideTimer);
            this.hideTimer = null;
        }
    }

    updateEnergyBar() {
        if (!this.energyBar) return;
        this.energyBar.clear();
        const barWidth = 300, barHeight = 30;
        const barX = GAME_CONFIG.width / 2 - barWidth / 2;
        const barY = GAME_CONFIG.height - 110;
        this.energyBar.fillStyle(0x333333, 0.8);
        this.energyBar.fillRoundedRect(barX, barY, barWidth, barHeight, 8);
        const fillWidth = (this.currentEnergy / this.MAX_ENERGY) * barWidth;
        this.energyBar.fillStyle(0x00ff00);
        this.energyBar.fillRoundedRect(barX, barY, Math.min(fillWidth, barWidth), barHeight, 8);
        this.energyBar.lineStyle(2, 0xffffff, 0.3);
        this.energyBar.strokeRoundedRect(barX, barY, barWidth, barHeight, 8);
        this.energyText.setPosition(GAME_CONFIG.width / 2, barY + barHeight / 2);
        this.energyText.setText(`${this.currentEnergy}/${this.MAX_ENERGY}`);
    }

    addEnergy(amount) {
        const oldEnergy = this.currentEnergy;
        this.currentEnergy = Math.min(this.MAX_ENERGY, this.currentEnergy + amount);
        if (oldEnergy !== this.currentEnergy) {
            this.saveEnergy();
            this.updateEnergyBar();
            if (this.currentEnergy >= this.COSTS.SEARCH_ITEM) {
                this.resetEnergyWarning();
            }
            if (this.currentEnergy >= this.MAX_ENERGY && oldEnergy < this.MAX_ENERGY) {
                this.sendFullEnergyNotification();
            }
        }
    }

    showLowEnergyWarning() {
        if (this.currentEnergy < this.COSTS.SEARCH_ITEM && this.energyIcon) {
            this.energyIcon.setTint(0xff0000);
            if (!this.blinkTween) {
                this.blinkTween = this.scene.tweens.add({
                    targets: this.energyIcon,
                    alpha: { from: 1, to: 0.5 },
                    duration: 500,
                    yoyo: true,
                    repeat: -1
                });
            }
        }
    }

    resetEnergyWarning() {
        if (this.energyIcon) {
            this.energyIcon.clearTint();
            if (this.blinkTween) {
                this.blinkTween.stop();
                this.blinkTween.remove();
                this.blinkTween = null;
            }
            this.energyIcon.setAlpha(1);
        }
    }

    sendFullEnergyNotification() {
        if ("Notification" in window && Notification.permission === "granted") {
            new Notification("–≠–Ω–µ—Ä–≥–∏—è –≤–æ—Å—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω–∞!", {
                body: "–í–∞—à–∞ —ç–Ω–µ—Ä–≥–∏—è –ø–æ–ª–Ω–æ—Å—Ç—å—é –≤–æ—Å—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω–∞!",
                icon: "./Assets/ApprovedUI/Energy.png"
            });
        }
    }

    saveEnergy() {
        localStorage.setItem('energy', this.currentEnergy.toString());
    }
    loadEnergy() {
        const saved = localStorage.getItem('energy');
        return saved ? parseInt(saved) : this.INITIAL_ENERGY;
    }
    saveLastUpdateTime() {
        localStorage.setItem('energyLastUpdate', this.lastUpdateTime.toString());
    }
    loadLastUpdateTime() {
        const saved = localStorage.getItem('energyLastUpdate');
        return saved ? parseInt(saved) : Date.now();
    }
    showRewardedAd() {
        const rewardAmount = 50;
        this.addEnergy(rewardAmount);
        const rewardText = this.scene.add.text(
            GAME_CONFIG.width / 2,
            GAME_CONFIG.height / 2,
            `+${rewardAmount} —ç–Ω–µ—Ä–≥–∏–∏!`,
            { fontSize: '32px', fill: '#00ff00', backgroundColor: '#000000', padding: { x: 20, y: 10 } }
        ).setOrigin(0.5).setDepth(200);
        this.scene.time.delayedCall(2000, () => {
            rewardText.destroy();
        });
    }

    hasEnough(amount) {
        this.updateEnergy();
        return this.currentEnergy >= amount;
    }

    spend(amount, action) {
        this.updateEnergy();
        if (this.currentEnergy < amount) {
            this.showNotEnoughEnergy();
            return false;
        }
        this.currentEnergy = Math.max(0, this.currentEnergy - amount);
        this.saveEnergy();
        this.updateEnergyBar();
        if (this.currentEnergy < 20) {
            this.showLowEnergyWarning();
        }
        return true;
    }

    startRegeneration() {
        const now = Date.now();
        const timePassed = now - this.lastUpdateTime;
        const energyToAdd = Math.floor((timePassed / this.REGENERATION_INTERVAL) * this.REGENERATION_RATE);
        this.addEnergy(energyToAdd);
        this.regenerationTimer = this.scene.time.addEvent({
            delay: this.REGENERATION_INTERVAL,
            callback: () => {
                if (this.currentEnergy < this.MAX_ENERGY) {
                    this.addEnergy(this.REGENERATION_RATE);
                    this.lastUpdateTime = Date.now();
                    this.saveLastUpdateTime();
                }
            },
            callbackScope: this,
            repeat: -1,
            loop: true
        });
    }

    handleMiss() {
        this.missCount++;
        if (this.missCount >= 5) {
            this.spend(this.COSTS.MISS_PENALTY, 'miss');
            this.missCount = 0;
            this.showFrozenScreen();
        }
    }

    showFrozenScreen() {
        const overlay = this.scene.add.rectangle(
            0, 0,
            this.scene.game.config.width,
            this.scene.game.config.height,
            0xffffff, 0.5
        ).setOrigin(0);

        this.scene.time.delayedCall(1000, () => {
            overlay.destroy();
        });
    }

    showNotEnoughEnergy() {
        const text = this.scene.add.text(
            this.scene.game.config.width / 2,
            this.scene.game.config.height / 2,
            '–ù–µ–¥–æ—Å—Ç–∞—Ç–æ—á–Ω–æ —ç–Ω–µ—Ä–≥–∏–∏!',
            {
                fontSize: '24px',
                fill: '#ff0000',
                backgroundColor: '#000000',
                padding: { x: 20, y: 10 }
            }
        ).setOrigin(0.5);

        this.scene.time.delayedCall(2000, () => {
            text.destroy();
        });
    }
}

class GameScene extends Phaser.Scene { 
    constructor() {
        super({ key: 'GameScene' });

        // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è –∏–≥—Ä–æ–≤—ã—Ö —Å–∏—Å—Ç–µ–º –∏ –ø–µ—Ä–µ–º–µ–Ω–Ω—ã—Ö
        this.currentLocation = null;
        this.journalSystem = null;
        this.popupSystem = null;
        this.energySystem = null;
        this.hintSystem = null;

        this.isTransitioning = false;
        this.canInteract = true;

        this.idleTimer = 0;
        this.lastInteractionTime = 0;
        this.lastHintTime = 0;
        this.hintCooldown = 30000;

        this.transitionZones = [];
        this.interactiveObjects = [];
        this.highlightedObject = null;

        this.state = {
            visitedLocations: new Set(),
            collectedItems: new Set(),
            solvedPuzzles: new Set(),
            triggers: new Map(),
            selectedDigits: ["0", "0", "0", "0"],
            foundObjects: [],
            remainingObjects: [],
            ringFound: false,
            inventory: []
        };

        // –ò–Ω–≤–µ–Ω—Ç–∞—Ä—å (–Ω–æ–≤—ã–π/–ø—Ä–∞–≤–∏–ª—å–Ω—ã–π –≤–∞—Ä–∏–∞–Ω—Ç: —Ñ–æ–Ω –º–∞—Å—à—Ç–∞–±–∏—Ä—É–µ—Ç—Å—è, —Å–ª–æ—Ç—ã - –∫–∞–∫ –≤ —Å—Ç–∞—Ä–æ–π —Å—Ü–µ–Ω–µ)
        this.inventory = {
            items: [],
            slots: [],
            background: null,
            toggleButton: null,
            isVisible: false,
            config: {
                originalBgWidth: 249,
                originalBgHeight: 1093,
                bgWidth: 100,     // –∂–µ–ª–∞–µ–º–∞—è —à–∏—Ä–∏–Ω–∞ –Ω–∞ —ç–∫—Ä–∞–Ω–µ
                bgHeight: 440,    // –∂–µ–ª–∞–µ–º–∞—è –≤—ã—Å–æ—Ç–∞ –Ω–∞ —ç–∫—Ä–∞–Ω–µ
                bgOffsetX: 30,
                bgOffsetY: 300,
                slotSize: 60,     // —Ä–∞–∑–º–µ—Ä –ø—Ä–µ–¥–º–µ—Ç–∞ –≤ —Å–ª–æ—Ç–µ (–¥–ª—è –º–∞—Å—à—Ç–∞–±–∏—Ä–æ–≤–∞–Ω–∏—è)
                maxSlots: 5
            }
        };

        // –ü—Ä–æ—á–∏–µ UI —ç–ª–µ–º–µ–Ω—Ç—ã
        this.itemList = null;
        this.itemTextObjects = [];
        this.textBackground = null;
        this.hintButton = null;
        this.hintButtonTween = null;
        this.codeInputGroup = null;
        this.popupGroup = null;

        // –û—Ç–ª–∞–¥–∫–∞
        this.debugMode = false;
        this.debugGraphics = null;

        // –û—Å–Ω–æ–≤–Ω–∞—è –∫–æ–Ω—Ñ–∏–≥—É—Ä–∞—Ü–∏—è
        this.config = {
            transitionDuration: 1000,
            highlightTint: 0xffffcc,
            idleTimeout: GAME_CONFIG.idleLimit * 1000,
            debugColor: 0xff0000,
            inventoryDepth: 1000
        };
    }

    initInventory() {
        this.inventory = {
            slots: [],
            items: [],
            background: null,
            toggleButton: null,
            isVisible: false,
            config: {
                originalBgWidth: 249,
                originalBgHeight: 1093,
                bgWidth: 100,   // –∂–µ–ª–∞–µ–º–∞—è —à–∏—Ä–∏–Ω–∞ –Ω–∞ —ç–∫—Ä–∞–Ω–µ
                bgHeight: 440,  // –∂–µ–ª–∞–µ–º–∞—è –≤—ã—Å–æ—Ç–∞ –Ω–∞ —ç–∫—Ä–∞–Ω–µ
                bgOffsetX: 30,
                bgOffsetY: 300,
                slotSize: 60,   // —Ä–∞–∑–º–µ—Ä –ø—Ä–µ–¥–º–µ—Ç–∞ –≤ —Å–ª–æ—Ç–µ (–¥–ª—è –º–∞—Å—à—Ç–∞–±–∏—Ä–æ–≤–∞–Ω–∏—è)
                maxSlots: 5
            }
        };
    }

    create() {
        // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è –∏–Ω–≤–µ–Ω—Ç–∞—Ä—è
        this.initInventory();
        this.createInventoryUI();
        this.restoreInventoryItems();

        // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è –∏–≥—Ä–æ–≤—ã—Ö —Å–∏—Å—Ç–µ–º
        this.popupSystem = new PopupSystem(this);
        
        // –ü–ª–∞–≤–Ω–æ–µ –ø–æ—è–≤–ª–µ–Ω–∏–µ —Å—Ü–µ–Ω—ã
        this.cameras.main.fadeIn(1000);
        
        // –°–æ–∑–¥–∞–Ω–∏–µ —Ñ–æ–Ω–∞ —Ç–µ–∫—É—â–µ–π –ª–æ–∫–∞—Ü–∏–∏
        this.createBackground();

        // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è —Å–∏—Å—Ç–µ–º—ã —ç–Ω–µ—Ä–≥–∏–∏
        if (!globalEnergySystem) {
            globalEnergySystem = new EnergySystem(this);
        } else {
            globalEnergySystem.scene = this;
            globalEnergySystem.createEnergyUI();
        }
        this.energySystem = globalEnergySystem;

        // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è —Å–∏—Å—Ç–µ–º—ã –¥–Ω–µ–≤–Ω–∏–∫–∞
        this.journalSystem = new JournalSystem(this);

        // –°–æ–∑–¥–∞–Ω–∏–µ UI —ç–ª–µ–º–µ–Ω—Ç–æ–≤
        this.createPauseButton();  // –ó–∞–º–µ–Ω—è–µ–º –º–µ–Ω—é-–∫–Ω–æ–ø–∫—É –Ω–∞ –∫–Ω–æ–ø–∫—É –ø–∞—É–∑—ã
        this.createHintButton();

        // –û–±—Ä–∞–±–æ—Ç—á–∏–∫ –ø—Ä–æ–º–∞—Ö–æ–≤ (–∫–ª–∏–∫–æ–≤ –ø–æ –ø—É—Å—Ç–æ–º—É –º–µ—Å—Ç—É)
        this.input.on('pointerdown', (pointer) => {
            if (!pointer.gameObject) {
                this.energySystem.handleMiss();
            }
        });

        // –°–æ–∑–¥–∞–Ω–∏–µ –∏–≥—Ä–æ–≤—ã—Ö –æ–±—ä–µ–∫—Ç–æ–≤ –¥–ª—è –ª–æ–∫–∞—Ü–∏–∏ "leftroom"
        if (this.location === 'leftroom') {
            this.createObjects();
            this.createUI();
        }

        // –°–æ–∑–¥–∞–Ω–∏–µ –∑–æ–Ω –Ω–∞–≤–∏–≥–∞—Ü–∏–∏
        NavigationUtils.createNavigationZones(this);
        
        // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è –≤—Ä–µ–º–µ–Ω–∏ –ø–æ—Å–ª–µ–¥–Ω–µ–≥–æ –≤–∑–∞–∏–º–æ–¥–µ–π—Å—Ç–≤–∏—è
        this.lastInteractionTime = this.time.now;
    }

    createPauseButton() {
        const buttonSize = 96;
        const buttonX = 75;
        const buttonY = 70;

        this.pauseButton = this.add.sprite(buttonX, buttonY, 'menu-btn')
            .setInteractive({ useHandCursor: true })
            .setDisplaySize(buttonSize, buttonSize)
            .setDepth(1000);

        // –≠—Ñ—Ñ–µ–∫—Ç –ø—Ä–∏ –Ω–∞–≤–µ–¥–µ–Ω–∏–∏
        this.pauseButton.on('pointerover', () => {
            this.tweens.add({
                targets: this.pauseButton,
                scale: 1.1,
                duration: 200,
                ease: 'Power2'
            });
        });

        this.pauseButton.on('pointerout', () => {
            this.tweens.add({
                targets: this.pauseButton,
                scale: 1,
                duration: 200,
                ease: 'Power2'
            });
        });

        this.pauseButton.on('pointerdown', () => {
            this.pauseButton.setTint(0xcccccc);
        });

        this.pauseButton.on('pointerup', () => {
            this.pauseButton.clearTint();
            this.openPauseMenu();
        });
    }

    openPauseMenu() {
        // –ü—Ä–∏–æ—Å—Ç–∞–Ω–∞–≤–ª–∏–≤–∞–µ–º —Ç–µ–∫—É—â—É—é —Å—Ü–µ–Ω—É
        this.scene.pause();
        
        // –ó–∞–ø—É—Å–∫–∞–µ–º —Å—Ü–µ–Ω—É –ø–∞—É–∑—ã
        this.scene.launch('PauseMenuScene', { 
            gameScene: this 
        });
    }

    createInventoryUI() {
        const cfg = this.inventory.config;
        const scaleX = cfg.bgWidth / cfg.originalBgWidth;
        const scaleY = cfg.bgHeight / cfg.originalBgHeight;

        // –§–æ–Ω –∏–Ω–≤–µ–Ω—Ç–∞—Ä—è
        this.inventory.background = this.add.image(
            cfg.bgOffsetX,
            cfg.bgOffsetY,
            'inventory-bg'
        )
        .setOrigin(0, 0)
        .setDisplaySize(cfg.bgWidth, cfg.bgHeight)
        .setScrollFactor(0)
        .setDepth(this.config.inventoryDepth)
        .setVisible(true)
        .setInteractive();

        // –¶–µ–Ω—Ç—Ä—ã —Å–ª–æ—Ç–æ–≤ (–º–∞—Å—à—Ç–∞–±–∏—Ä—É—é—Ç—Å—è!)
        const slotPositions = [
            { x: 130, y: 190 },
            { x: 130, y: 365 },
            { x: 130, y: 540 },
            { x: 130, y: 720 },
            { x: 130, y: 890 }
        ];

        this.inventory.slots = slotPositions.map((pos, i) => ({
            x: cfg.bgOffsetX + pos.x * scaleX,
            y: cfg.bgOffsetY + pos.y * scaleY,
            item: null,
            index: i
        }));
    }

    restoreInventoryItems() {
        // –£–¥–∞–ª–∏—Ç—å —Å—Ç–∞—Ä—ã–µ —Å–ø—Ä–∞–π—Ç—ã
        this.inventory.items.forEach(sprite => { if (sprite) sprite.destroy(); });
        this.inventory.items = [];
        this.inventory.slots.forEach(slot => { slot.item = null; });

        // –í–æ—Å—Å—Ç–∞–Ω–æ–≤–∏—Ç—å –ø—Ä–µ–¥–º–µ—Ç—ã
        this.state.inventory.forEach(({ key, name }) => {
            this.addToInventory(key, name, true); // —Ä–µ–∂–∏–º –≤–æ—Å—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω–∏—è
        });
    }

    addToInventory(key, name, restoring = false) {
        if (this.state.inventory.some(item => item.key === key) && !restoring) return false;

        const freeSlot = this.inventory.slots.find(slot => !slot.item);
        if (!freeSlot) return false;

        const itemSprite = this.add.sprite(freeSlot.x, freeSlot.y, key)
            .setOrigin(0.5)
            .setScrollFactor(0)
            .setDepth(this.config.inventoryDepth + 1)
            .setVisible(true)
            .setInteractive();

        const desiredSize = this.inventory.config.slotSize || 64;
        const scale = Math.min(
            desiredSize / itemSprite.width,
            desiredSize / itemSprite.height
        );
        itemSprite.setScale(scale);

        itemSprite.on('pointerdown', () => {
            this.showItemPopup(key, name);
        });

        freeSlot.item = itemSprite;
        this.inventory.items.push(itemSprite);

        if (!restoring) {
            this.state.inventory.push({ key, name });
            if (this.journalSystem) {
                this.journalSystem.addEntry(`–ù–∞–π–¥–µ–Ω –ø—Ä–µ–¥–º–µ—Ç: ${name}`);
            }
        }
        return true;
    }

    showItemPopup(key, name) {
        if (!this.popupSystem) return;
        this.popupSystem.create('ITEM', {
            content: key,
            onClose: () => {
                console.log(`–ó–∞–∫—Ä—ã—Ç –ø–æ–ø–∞–ø –ø—Ä–µ–¥–º–µ—Ç–∞: ${name}`);
            }
        });
    }

    showLocationPopup(objectKey, x, y) {
        if (!this.popupSystem) return;
    
        this.popupSystem.create('LOCATION', {
            content: objectKey,
            x: GAME_CONFIG.width / 2,  // –±—ã–ª–æ x
            y: GAME_CONFIG.height / 2, // –±—ã–ª–æ y
            onClose: () => {
                console.log(`–ó–∞–∫—Ä—ã—Ç –ø–æ–ø–∞–ø –ª–æ–∫–∞—Ü–∏–∏: ${objectKey}`);
            }
        });
    }

    updateHintButtonState() {
        // –ü—Ä–æ–≤–µ—Ä—è–µ–º, —Å—É—â–µ—Å—Ç–≤—É–µ—Ç –ª–∏ –∫–Ω–æ–ø–∫–∞ –ø–æ–¥—Å–∫–∞–∑–∫–∏
        if (this.hintButton) {
            // –ü—Ä–æ–≤–µ—Ä—è–µ–º, –¥–æ—Å—Ç–∞—Ç–æ—á–Ω–æ –ª–∏ —ç–Ω–µ—Ä–≥–∏–∏ –¥–ª—è –∏—Å–ø–æ–ª—å–∑–æ–≤–∞–Ω–∏—è –ø–æ–¥—Å–∫–∞–∑–∫–∏ (USE_HINT = 10)
            if (this.energySystem.hasEnough(this.energySystem.COSTS.USE_HINT)) {
                // –ï—Å–ª–∏ —ç–Ω–µ—Ä–≥–∏–∏ –¥–æ—Å—Ç–∞—Ç–æ—á–Ω–æ - –∫–Ω–æ–ø–∫–∞ –∞–∫—Ç–∏–≤–Ω–∞
                this.hintButton.clearTint();
                this.hintButton.setInteractive();
            } else {
                // –ï—Å–ª–∏ —ç–Ω–µ—Ä–≥–∏–∏ –Ω–µ–¥–æ—Å—Ç–∞—Ç–æ—á–Ω–æ (9 –∏ –º–µ–Ω—å—à–µ) - –∫–Ω–æ–ø–∫–∞ –Ω–µ–∞–∫—Ç–∏–≤–Ω–∞
                this.hintButton.setTint(0x666666); // –°–µ—Ä—ã–π —Ü–≤–µ—Ç
                this.hintButton.disableInteractive(); // –û—Ç–∫–ª—é—á–∞–µ–º –∏–Ω—Ç–µ—Ä–∞–∫—Ç–∏–≤–Ω–æ—Å—Ç—å
            }
        }
    }

    handleObjectClick(object) {
        if (!object || object.isAnimating) {
            return;
        }
    
        // –ü—Ä–æ–≤–µ—Ä—è–µ–º –¥–æ—Å—Ç–∞—Ç–æ—á–Ω–æ –ª–∏ —ç–Ω–µ—Ä–≥–∏–∏ –¥–ª—è –¥–µ–π—Å—Ç–≤–∏—è
        if (!this.energySystem.spend(this.energySystem.COSTS.SEARCH_ITEM, 'search')) {
            return;
        }
    
        object.isAnimating = true;
        
        // –ü—Ä–æ–≤–µ—Ä—è–µ–º, —è–≤–ª—è–µ—Ç—Å—è –ª–∏ –æ–±—ä–µ–∫—Ç –º–∞–ª–µ–Ω—å–∫–∏–º –ø–æ–ø–∞–ø–æ–º
        if (object.isSmallPopup) {
            this.showLocationPopup(object.popupKey, object.x, object.y);
            object.isAnimating = false;
            return;
        }
    
        // –û—Å—Ç–∞–ª—å–Ω–æ–π –∫–æ–¥ handleObjectClick –±–µ–∑ –∏–∑–º–µ–Ω–µ–Ω–∏–π
        this.handleDependentObjects(object.name);
    
        switch (object.name) {
            case '–°–µ–π—Ñ':
                object.isAnimating = false;
                this.openSafe();
                break;
            case '–°–∫–æ–º–∫–∞–Ω–Ω—ã–π –ª–∏—Å—Ç':
                this.showPopup(object, 'list2', true);
                break;
            case '–ö–æ–ª—å—Ü–æ':
                this.addToInventory('object8', '–ö–æ–ª—å—Ü–æ');
                this.animateObjectDisappearance(object);
                break;
            default:
                this.animateObjectDisappearance(object);
        }
    }

    useHint() {
        // –ü—Ä–æ–≤–µ—Ä—è–µ–º, –¥–æ—Å—Ç–∞—Ç–æ—á–Ω–æ –ª–∏ —ç–Ω–µ—Ä–≥–∏–∏
        if (!this.energySystem.spend(this.energySystem.COSTS.USE_HINT, 'hint')) {
            return;
        }
    
        const currentTime = Date.now();
        
        // –ü—Ä–æ–≤–µ—Ä—è–µ–º, –ø—Ä–æ—à–ª–æ –ª–∏ 30 —Å–µ–∫—É–Ω–¥ —Å –ø–æ—Å–ª–µ–¥–Ω–µ–≥–æ –∏—Å–ø–æ–ª—å–∑–æ–≤–∞–Ω–∏—è
        if (currentTime - this.lastHintTime < this.hintCooldown) {
            // –ï—Å–ª–∏ –Ω–µ –ø—Ä–æ—à–ª–æ 30 —Å–µ–∫—É–Ω–¥, –≤—ã—Ö–æ–¥–∏–º
            return;
        }
    
        // –û–±–Ω–æ–≤–ª—è–µ–º –≤—Ä–µ–º—è –ø–æ—Å–ª–µ–¥–Ω–µ–π –ø–æ–¥—Å–∫–∞–∑–∫–∏
        this.lastHintTime = currentTime;
    
        // –ü–æ–∫–∞–∑—ã–≤–∞–µ–º –ø–æ–¥—Å–∫–∞–∑–∫—É –≤ –∑–∞–≤–∏—Å–∏–º–æ—Å—Ç–∏ –æ—Ç –ª–æ–∫–∞—Ü–∏–∏
        if (this.location === 'leftroom' && this.state.remainingObjects.length > 0) {
            this.showObjectHint();
        } else {
            this.showNavigationHint();
        }
    }

    init(data) {
        // –û–±—ä–µ–¥–∏–Ω–µ–Ω–Ω–∞—è –∏–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è –∏–∑ –æ–±–æ–∏—Ö –∫–ª–∞—Å—Å–æ–≤
        this.location = data.location || 'front-house';
        this.locationHistory = data.history || [];
        
        // –í–æ—Å—Å—Ç–∞–Ω–∞–≤–ª–∏–≤–∞–µ–º —Å–æ—Å—Ç–æ—è–Ω–∏–µ
        if (data.gameState) {
            this.state = {
                ...this.state,
                foundObjects: data.gameState.foundObjects || [],
                remainingObjects: data.gameState.remainingObjects || [],
                ringFound: data.gameState.ringFound || false,
                inventory: data.gameState.inventory || []
            };
        }
    }

    createBackground() {
        const backgroundKey = locationMap[this.location].image;
        if (this.textures.exists(backgroundKey)) {
            this.add.image(GAME_CONFIG.width / 2, GAME_CONFIG.height / 2, backgroundKey)
                .setDisplaySize(1920, 1080);
        } else {
            console.error(`–û—à–∏–±–∫–∞: –ò–∑–æ–±—Ä–∞–∂–µ–Ω–∏–µ –¥–ª—è ${backgroundKey} –Ω–µ –∑–∞–≥—Ä—É–∂–µ–Ω–æ`);
        }
    }

    createObjects() {
        const objects = [
            { key: 'object1', x: 502, y: 206, name: '–¢–∞—Ä–µ–ª–∫–∞' },
            { key: 'object2', x: 175, y: 306, name: '–ß–µ—Ä–µ–ø-—Å–≤–µ—á–∞' },
            { key: 'object3', x: 354, y: 106, name: '–ö–∞—Ä—Ç–∏–Ω–∞' },
            { key: 'object4', x: 451, y: 251, name: '–°–µ—Ä–≤–∏–∑' },
            { key: 'object5', x: 485, y: 370, name: '–°–∫–æ–º–∫–∞–Ω–Ω—ã–π –ª–∏—Å—Ç' },
            { key: 'object7', x: 117, y: 407, name: '–õ–∏—Å—Ç' },
            { 
                key: 'object8', 
                x: 353, 
                y: 246, 
                name: '–ö–æ–ª—å—Ü–æ',
                hidden: true,
                dependsOn: '–°–µ–π—Ñ',
                available: false
            }
        ];
    
        // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∏—Ä—É–µ–º remainingObjects, –≤–∫–ª—é—á–∞—è —Å–∫—Ä—ã—Ç—ã–µ –ø—Ä–µ–¥–º–µ—Ç—ã
        if (!this.state.remainingObjects || this.state.remainingObjects.length === 0) {
            this.state.remainingObjects = objects;
        }
    
        // –°–æ–∑–¥–∞–µ–º —Ç–æ–ª—å–∫–æ –≤–∏–¥–∏–º—ã–µ –æ–±—ä–µ–∫—Ç—ã, –∫–æ—Ç–æ—Ä—ã–µ –µ—â–µ –Ω–µ –±—ã–ª–∏ –Ω–∞–π–¥–µ–Ω—ã
        this.state.remainingObjects.forEach(obj => {
            // –ü—Ä–æ–≤–µ—Ä—è–µ–º, –Ω–µ –±—ã–ª –ª–∏ –ø—Ä–µ–¥–º–µ—Ç —É–∂–µ –Ω–∞–π–¥–µ–Ω –∏ –Ω–µ —è–≤–ª—è–µ—Ç—Å—è –ª–∏ –æ–Ω —Å–∫—Ä—ã—Ç—ã–º
            if (!obj.hidden && !this.state.foundObjects.includes(obj.name)) {
                this.createGameObject(obj);
            }
        });
    
        // –°–æ–∑–¥–∞–µ–º —Å–µ–π—Ñ, —Ç–æ–ª—å–∫–æ –µ—Å–ª–∏ –∫–æ–ª—å—Ü–æ –µ—â–µ –Ω–µ –Ω–∞–π–¥–µ–Ω–æ
        if (!this.state.ringFound) {
            this.createSafe();
        }
    }

    createGameObject(objData) { // –°–æ–∑–¥–∞–Ω–∏–µ –æ—Ç–¥–µ–ª—å–Ω–æ–≥–æ –∏–≥—Ä–æ–≤–æ–≥–æ –æ–±—ä–µ–∫—Ç–∞
        const object = this.add.sprite(objData.x, objData.y, objData.key)
            .setInteractive()
            .setName(objData.name)
            .on('pointerdown', () => this.handleObjectClick(object));

        return object;
    }

    createSafe() { // –°–æ–∑–¥–∞–Ω–∏–µ —Å–µ–π—Ñ–∞
        this.createGameObject({
            key: 'object6',
            x: 353,
            y: 246,
            name: '–°–µ–π—Ñ'
        });
    }

    createUI() {
        // –û—Ç—Å—Ç—É–ø –æ—Ç –≤–µ—Ä—Ö–Ω–µ–≥–æ –∫—Ä–∞—è
        const padding = 5;
        
        // 1. –°–æ–∑–¥–∞–µ–º —Ñ–æ–Ω —Å–Ω–∞—á–∞–ª–∞
        this.textBackground = this.add.rectangle(
            GAME_CONFIG.width / 2,    // —Ü–µ–Ω—Ç—Ä–∏—Ä—É–µ–º –ø–æ –≥–æ—Ä–∏–∑–æ–Ω—Ç–∞–ª–∏
            padding + 10,             // –Ω–µ–±–æ–ª—å—à–æ–π –æ—Ç—Å—Ç—É–ø —Å–≤–µ—Ä—Ö—É
            320,                      // —à–∏—Ä–∏–Ω–∞ —Ñ–æ–Ω–∞
            200,                      // –Ω–∞—á–∞–ª—å–Ω–∞—è –≤—ã—Å–æ—Ç–∞ —Ñ–æ–Ω–∞
            0x000000,                // —á–µ—Ä–Ω—ã–π —Ü–≤–µ—Ç
            0.8                      // –ø—Ä–æ–∑—Ä–∞—á–Ω–æ—Å—Ç—å 80%
        ).setOrigin(0.5, 0);         // –ø—Ä–∏–≤—è–∑–∫–∞ –∫ –≤–µ—Ä—Ö–Ω–µ–º—É –∫—Ä–∞—é
        this.textBackground.setDepth(-1); // —Ñ–æ–Ω –ø–æ–¥ —Ç–µ–∫—Å—Ç–æ–º
    
        // 2. –°–æ–∑–¥–∞–µ–º —Ç–µ–∫—Å—Ç–æ–≤—ã–π –∫–æ–Ω—Ç–µ–π–Ω–µ—Ä
        this.itemList = this.add.text(
            GAME_CONFIG.width / 2,    // —Ü–µ–Ω—Ç—Ä–∏—Ä—É–µ–º –ø–æ –≥–æ—Ä–∏–∑–æ–Ω—Ç–∞–ª–∏
            padding + 20,             // –æ—Ç—Å—Ç—É–ø –æ—Ç –≤–µ—Ä—Ö–∞ + 20 –ø–∏–∫—Å–µ–ª–µ–π –¥–ª—è —á–∏—Ç–∞–µ–º–æ—Å—Ç–∏
            '',                       // –ø—É—Å—Ç–æ–π —Ç–µ–∫—Å—Ç –∏–∑–Ω–∞—á–∞–ª—å–Ω–æ
            {
                fontSize: '13px',
                fill: '#ffffff',
                padding: { x: 15, y: 5 },
                align: 'left',        // –≤—ã—Ä–∞–≤–Ω–∏–≤–∞–Ω–∏–µ –ø–æ –ª–µ–≤–æ–º—É –∫—Ä–∞—é
                fixedWidth: 300,      // —Ñ–∏–∫—Å–∏—Ä–æ–≤–∞–Ω–Ω–∞—è —à–∏—Ä–∏–Ω–∞
                fixedHeight: 180,     // —Ñ–∏–∫—Å–∏—Ä–æ–≤–∞–Ω–Ω–∞—è –≤—ã—Å–æ—Ç–∞
                backgroundColor: null  // —É–±–∏—Ä–∞–µ–º —Ñ–æ–Ω —É —Ç–µ–∫—Å—Ç–∞
            }
        ).setOrigin(0.5, 0);         // —Ü–µ–Ω—Ç—Ä–∏—Ä–æ–≤–∞–Ω–∏–µ –ø–æ –≥–æ—Ä–∏–∑–æ–Ω—Ç–∞–ª–∏
    
        // –†–∞–∑–¥–µ–ª—è–µ–º –ø—Ä–µ–¥–º–µ—Ç—ã –Ω–∞ –¥–≤–µ –∫–æ–ª–æ–Ω–∫–∏
        const itemsPerColumn = Math.ceil(this.state.remainingObjects.length / 2);
        const leftColumnItems = this.state.remainingObjects.slice(0, itemsPerColumn);
        const rightColumnItems = this.state.remainingObjects.slice(itemsPerColumn);
    
        // –°–æ–∑–¥–∞–µ–º –º–∞—Å—Å–∏–≤—ã –¥–ª—è –æ–±–µ–∏—Ö –∫–æ–ª–æ–Ω–æ–∫ —Å —É—á–µ—Ç–æ–º —Ü–≤–µ—Ç–∞
        const leftColumn = leftColumnItems.map(obj => {
            const color = (obj.hidden && !obj.available) ? '#ff0000' : '#ffffff';
            return { 
                text: obj.name, 
                color: color 
            };
        });
        
        const rightColumn = rightColumnItems.map(obj => {
            const color = (obj.hidden && !obj.available) ? '#ff0000' : '#ffffff';
            return { 
                text: obj.name, 
                color: color 
            };
        });

        // –ù–∞—Ö–æ–¥–∏–º –º–∞–∫—Å–∏–º–∞–ª—å–Ω—É—é –¥–ª–∏–Ω—É –∏–º–µ–Ω–∏ –ø—Ä–µ–¥–º–µ—Ç–∞ –¥–ª—è –≤—ã—Ä–∞–≤–Ω–∏–≤–∞–Ω–∏—è –∫–æ–ª–æ–Ω–æ–∫
        const maxLength = Math.max(
            ...leftColumn.map(item => item.text.length),
            ...rightColumn.map(item => item.text.length)
        );
    
        // –§–æ—Ä–º–∏—Ä—É–µ–º —Ç–µ–∫—Å—Ç –¥–ª—è —Å–ø–∏—Å–∫–∞
        let formattedText = '';
        leftColumn.forEach((leftItem, index) => {
            const rightItem = rightColumn[index] || { text: '', color: '#ffffff' };
            formattedText += leftItem.text.padEnd(maxLength + 5);
            if (rightItem.text) {
                formattedText += rightItem.text;
            }
            if (index < leftColumn.length - 1) {
                formattedText += '\n';
            }
        });
    
        // –£—Å—Ç–∞–Ω–∞–≤–ª–∏–≤–∞–µ–º —Ç–µ–∫—Å—Ç –≤ –∫–æ–Ω—Ç–µ–π–Ω–µ—Ä
        this.itemList.setText(formattedText);
    
        // –û–±–Ω–æ–≤–ª—è–µ–º —Å–ø–∏—Å–æ–∫ –ø—Ä–µ–¥–º–µ—Ç–æ–≤
        this.updateItemList();
        
        return this.itemList;
    }

    createHintButton() {
        const buttonSize = 128;

        // –ü—Ä–æ—Å—Ç—ã–µ —Ñ–∏–∫—Å–∏—Ä–æ–≤–∞–Ω–Ω—ã–µ –∫–æ–æ—Ä–¥–∏–Ω–∞—Ç—ã –¥–ª—è –∫–Ω–æ–ø–∫–∏ –ø–æ–¥—Å–∫–∞–∑–∫–∏
        const buttonX = 1845; // –ü–æ–∑–∏—Ü–∏—è –ø–æ X (–ª–µ–≤–æ-–ø—Ä–∞–≤–æ)
        const buttonY = 70; // –ü–æ–∑–∏—Ü–∏—è –ø–æ Y (–≤–µ—Ä—Ö-–Ω–∏–∑)

        // –°–æ–∑–¥–∞–µ–º –æ—Å–Ω–æ–≤–Ω—É—é –∫–Ω–æ–ø–∫—É
        this.hintButton = this.add.sprite(
            buttonX,
            buttonY,
            'hint-button'
        )
    .setInteractive() // –î–µ–ª–∞–µ–º –∫–Ω–æ–ø–∫—É –∫–ª–∏–∫–∞–±–µ–ª—å–Ω–æ–π
    .setDisplaySize(buttonSize, buttonSize); // –£—Å—Ç–∞–Ω–∞–≤–ª–∏–≤–∞–µ–º —Ä–∞–∑–º–µ—Ä –∫–Ω–æ–ø–∫–∏
    
        // –§—É–Ω–∫—Ü–∏—è –¥–ª—è —Å–æ–∑–¥–∞–Ω–∏—è —Å–∏–Ω—Ö—Ä–æ–Ω–∏–∑–∏—Ä–æ–≤–∞–Ω–Ω–æ–π –∞–Ω–∏–º–∞—Ü–∏–∏ –ø—É–ª—å—Å–∞—Ü–∏–∏
        const createPulseTween = () => {
            const pulseDuration = 700; 
    
            // –û–±—ä–µ–¥–∏–Ω–µ–Ω–Ω–∞—è –ø—É–ª—å—Å–∞—Ü–∏—è —Ä–∞–∑–º–µ—Ä–∞ –∏ —Ü–≤–µ—Ç–∞
            this.hintButtonTween = this.tweens.add({
                targets: this.hintButton,
                scale: { from: 0.92, to: 1.05 }, // –£–≤–µ–ª–∏—á–∏–ª–∏ —É–º–µ–Ω—å—à–µ–Ω–∏–µ —Å 0.98 –¥–æ 0.92
                duration: pulseDuration,
                yoyo: true,
                repeat: -1,
                ease: 'Sine.easeInOut',
                onUpdate: (tween) => {
                    const progress = (tween.getValue() - 0.92) / (1.05 - 0.92); // –æ–±–Ω–æ–≤–∏–ª–∏ –Ω–æ—Ä–º–∞–ª–∏–∑–∞—Ü–∏—é
                    const color = Phaser.Display.Color.Interpolate.ColorWithColor(
                        Phaser.Display.Color.ValueToColor(0xFFFFFF),  // –±–µ–ª—ã–π
                        Phaser.Display.Color.ValueToColor(0xFFD700),  // –∑–æ–ª–æ—Ç–æ–π
                        100,
                        progress * 100
                    );
                    this.hintButton.setTint(Phaser.Display.Color.GetColor(color.r, color.g, color.b));
                }
            });
        };
    
        // –û–±—Ä–∞–±–æ—Ç—á–∏–∫ –∫–ª–∏–∫–∞ —Å –∞–Ω–∏–º–∞—Ü–∏–µ–π
        this.hintButton.on('pointerdown', () => {
            const currentTime = Date.now();
            if (currentTime - this.lastHintTime >= this.hintCooldown) {
                this.tweens.add({
                    targets: this.hintButton,
                    scale: 0.9,
                    duration: 100,
                    yoyo: true,
                    onComplete: () => {
                        this.useHint();
                        this.hintButton.setAlpha(0.5);
                        this.hintButton.clearTint();
                        if (this.hintButtonTween) {
                            this.hintButtonTween.stop();
                            this.hintButtonTween = null;
                        }
                    }
                });
            } else {
                this.tweens.add({
                    targets: this.hintButton,
                    angle: { from: -5, to: 5 },
                    duration: 100,
                    yoyo: true,
                    repeat: 2,
                    onComplete: () => {
                        this.hintButton.setAngle(0);
                    }
                });
            }
        });
    
        // –ü—Ä–æ–≤–µ—Ä–∫–∞ –¥–æ—Å—Ç—É–ø–Ω–æ—Å—Ç–∏ –ø–æ–¥—Å–∫–∞–∑–∫–∏
        this.time.addEvent({
            delay: 1000,
            callback: () => {
                const currentTime = Date.now();
                if (currentTime - this.lastHintTime >= this.hintCooldown) {
                    this.hintButton.setAlpha(1);
                    if (!this.hintButtonTween) {
                        createPulseTween();
                    }
                }
            },
            loop: true
        });
    
        // –ù–∞—á–∞–ª—å–Ω–æ–µ —Å–æ—Å—Ç–æ—è–Ω–∏–µ
        if (Date.now() - this.lastHintTime < this.hintCooldown) {
            this.hintButton.setAlpha(0.5);
            this.hintButton.clearTint();
        } else {
            createPulseTween();
        }
    }
    
    handleDependentObjects(parentObjectName) {
        this.state.remainingObjects.forEach(obj => {
            if (obj.dependsOn === parentObjectName) {
                this.updateItemList(); // –û–±–Ω–æ–≤–ª—è–µ–º —Å–ø–∏—Å–æ–∫ –ø—Ä–µ–¥–º–µ—Ç–æ–≤
                console.log(`–ü—Ä–µ–¥–º–µ—Ç ${obj.name} —Å—Ç–∞–ª –¥–æ—Å—Ç—É–ø–µ–Ω –ø–æ—Å–ª–µ –≤–∑–∞–∏–º–æ–¥–µ–π—Å—Ç–≤–∏—è —Å ${parentObjectName}`);
            }
        });
    }

    animateObjectDisappearance(object) {
        if (!object || !object.scene) {
            return;
        }
    
        object.setTint(GAME_CONFIG.colors.success);
    
        // –ê–Ω–∏–º–∞—Ü–∏—è —É–≤–µ–ª–∏—á–µ–Ω–∏—è
        this.tweens.add({
            targets: object,
            scale: 1.5,
            duration: 350,
            ease: 'Power1',
            onComplete: () => {
                // –ê–Ω–∏–º–∞—Ü–∏—è –∏—Å—á–µ–∑–Ω–æ–≤–µ–Ω–∏—è
                this.tweens.add({
                    targets: object,
                    alpha: 0,
                    duration: 350,
                    ease: 'Power1',
                    onComplete: () => {
                        if (object.name === '–ö–æ–ª—å—Ü–æ') {
                            this.state.ringFound = true;
                        }
                        
                        if (!this.state.foundObjects.includes(object.name)) {
                            this.state.foundObjects.push(object.name);
                        }
                        
                        this.updateItemList();
                        
                        if (object.scene) {
                            object.destroy();
                        }
                    }
                });
            }
        });
    
        this.state.idleTime = 0;
        this.hintButton.clearTint();
    }
    
    showPopup(object, imageKey, addToInventory = false) {
        this.createPopup({
            background: 'popup-bg-item', // –∫–ª—é—á —Ñ–æ–Ω–æ–≤–æ–≥–æ –∏–∑–æ–±—Ä–∞–∂–µ–Ω–∏—è –¥–Ω–µ–≤–Ω–∏–∫–∞
            content: imageKey,           // –∫–ª—é—á –∫–æ–Ω—Ç–µ–Ω—Ç–∞ (–Ω–∞–ø—Ä–∏–º–µ—Ä, —Å—Ç—Ä–∞–Ω–∏—Ü–∞ –∏–ª–∏ –∑–∞–ø–∏—Å—å)
            x: GAME_CONFIG.width / 2,    // —Ü–µ–Ω—Ç—Ä –ø–æ –≥–æ—Ä–∏–∑–æ–Ω—Ç–∞–ª–∏
            y: GAME_CONFIG.height / 2,   // —Ü–µ–Ω—Ç—Ä –ø–æ –≤–µ—Ä—Ç–∏–∫–∞–ª–∏
            onClose: () => {
                if (addToInventory && imageKey === 'list2') {
                    this.addToInventory('list2', '–†–∞–∑–≤–µ—Ä–Ω—É—Ç—ã–π –ª–∏—Å—Ç');
                }
                if (object) {
                    object.isAnimating = false;
                    this.animateObjectDisappearance(object);
             }
            }
        });
    }
    
    reopenPopup(scene) {
        if (!scene) return;

        this.currentPopupInfo = {
            object: null,
            imageKey: 'list2',
            addToInventory: false,
            isFirstOpen: false
        };

        this.popupGroup = scene.add.group(); // –ì—Ä—É–ø–ø–∞ –¥–ª—è –≤—Å–µ—Ö —ç–ª–µ–º–µ–Ω—Ç–æ–≤ –ø–æ–ø–∞–ø–∞

        const popupBackground = scene.add.rectangle(
            GAME_CONFIG.width / 2,
            GAME_CONFIG.height / 2,
            GAME_CONFIG.width,
            GAME_CONFIG.height,
            0x000000,
            0.7
        ).setDepth(998)
        .setInteractive(); // –∑–∞—Ç–µ–º–Ω—ë–Ω–Ω—ã–π —Ñ–æ–Ω
        this.popupGroup.add(popupBackground);

        const popupFrame = scene.add.image(
            GAME_CONFIG.width / 2,
            GAME_CONFIG.height / 2,
            'popup-bg-item'
        ).setDepth(999); // —Ñ–æ–Ω –¥–Ω–µ–≤–Ω–∏–∫–∞ (–æ—Ä–∏–≥–∏–Ω–∞–ª—å–Ω—ã–π —Ä–∞–∑–º–µ—Ä)
        this.popupGroup.add(popupFrame);

        const popupImage = scene.add.image(
            GAME_CONFIG.width / 2,
            GAME_CONFIG.height / 2,
            'list2'
        ).setInteractive()
        .setDepth(1000)
        .setOrigin(0.5); // –∫–æ–Ω—Ç–µ–Ω—Ç –¥–Ω–µ–≤–Ω–∏–∫–∞ (–æ—Ä–∏–≥–∏–Ω–∞–ª—å–Ω—ã–π —Ä–∞–∑–º–µ—Ä)
        this.popupGroup.add(popupImage);

        const closeButton = scene.add.image(
            // –ö–Ω–æ–ø–∫–∞ –∑–∞–∫—Ä—ã—Ç–∏—è –æ—Ç–Ω–æ—Å–∏—Ç–µ–ª—å–Ω–æ —Ü–µ–Ω—Ç—Ä–∞ –∏ —Ä–∞–∑–º–µ—Ä–æ–≤ –ø–æ–ø–∞–ø–∞
            GAME_CONFIG.width / 2 + (popupFrame.width ? popupFrame.width / 2 - 40 : 300),
            GAME_CONFIG.height / 2 - (popupFrame.height ? popupFrame.height / 2 - 40 : 200),
            'close'
        ).setDepth(1001)
        .setInteractive({ pixelPerfect: true })
        .setOrigin(0.5);
        this.popupGroup.add(closeButton);

        closeButton.on('pointerover', () => closeButton.setTint(0xcccccc));
        closeButton.on('pointerout', () => closeButton.clearTint());
        closeButton.on('pointerdown', () => closeButton.setScale(0.95));
        closeButton.on('pointerup', () => {
            closeButton.setScale(1);
            closeButton.clearTint();
            this.closePopup();
        });

        // –ó–∞–∫—Ä—ã—Ç–∏–µ –ø–æ –∫–ª–∏–∫—É –Ω–∞ —Ñ–æ–Ω –∏–ª–∏ –∏–∑–æ–±—Ä–∞–∂–µ–Ω–∏–µ
        const backgroundHandler = () => this.closePopup();
        popupImage.on('pointerdown', backgroundHandler);
        popupBackground.on('pointerdown', backgroundHandler);
    }
    
    closePopup() {
        if (this.popupGroup) {
            this.popupGroup.getChildren().forEach(child => child.removeAllListeners()); // –£–¥–∞–ª—è–µ–º –≤—Å–µ –æ–±—Ä–∞–±–æ—Ç—á–∏–∫–∏ —Å–æ–±—ã—Ç–∏–π
            this.popupGroup.clear(true, true); // –û—á–∏—â–∞–µ–º –≥—Ä—É–ø–ø—É
            this.popupGroup = null;
    
            if (this.currentPopupInfo && 
                this.currentPopupInfo.imageKey === 'list2' && 
                this.currentPopupInfo.isFirstOpen) {
                this.time.delayedCall(100, () => {
                    if (this.journalSystem) {
                        this.journalSystem.showNewEntryEffect(); // –ü–æ–∫–∞–∑—ã–≤–∞–µ–º —ç—Ñ—Ñ–µ–∫—Ç –Ω–∞ –∫–Ω–æ–ø–∫–µ –¥–Ω–µ–≤–Ω–∏–∫–∞
                    }
                });
            }
    
            this.currentPopupInfo = null; // –û—á–∏—â–∞–µ–º –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏—é –æ —Ç–µ–∫—É—â–µ–º popup
        }
    }

    createMenuButton() {
        const menuButton = this.add.sprite(75, 70, 'menu-btn')
            .setInteractive({ useHandCursor: true })
            .setDepth(1000);

        menuButton.on('pointerover', () => {
            menuButton.setScale(1.1);
        });

        menuButton.on('pointerout', () => {
            menuButton.setScale(1);
        });

        menuButton.on('pointerdown', () => {
            menuButton.setTint(0xcccccc);
        });

        menuButton.on('pointerup', () => {
            menuButton.clearTint();
            this.cameras.main.fadeOut(1000);
            this.time.delayedCall(1000, () => {
                this.scene.start('MainMenuScene');
            });
        });

        return menuButton;
    }

    addToInventory(key, name, restoring = false) {
        // –ù–µ –¥–æ–±–∞–≤–ª—è—Ç—å –¥—É–±–ª–∏–∫–∞—Ç—ã (–µ—Å–ª–∏ –Ω–µ –≤–æ—Å—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω–∏–µ)
        if (this.state.inventory.some(item => item.key === key) && !restoring) return false;

        // –ù–∞–π—Ç–∏ —Å–≤–æ–±–æ–¥–Ω—ã–π —Å–ª–æ—Ç
        const freeSlot = this.inventory.slots.find(slot => !slot.item);
        if (!freeSlot) return false;

        // –°–æ–∑–¥–∞—Ç—å —Å–ø—Ä–∞–π—Ç –ø—Ä–µ–¥–º–µ—Ç–∞
        const itemSprite = this.add.sprite(freeSlot.x, freeSlot.y, key)
            .setOrigin(0.5)
            .setScrollFactor(0)
            .setDepth(1001)
            .setVisible(true)
            .setInteractive();

        // –ú–∞—Å—à—Ç–∞–±–∏—Ä–æ–≤–∞—Ç—å –ø–æ–¥ —Ä–∞–∑–º–µ—Ä —Å–ª–æ—Ç–∞
        const desiredSize = this.inventory.config.slotSize || 64;
        const scale = Math.min(
            desiredSize / itemSprite.width,
            desiredSize / itemSprite.height
        );
        itemSprite.setScale(scale);

        // –ö–ª–∏–∫ –ø–æ –ø—Ä–µ–¥–º–µ—Ç—É ‚Äî –ø–æ–∫–∞–∑–∞—Ç—å –ø–æ–ø–∞–ø
        itemSprite.on('pointerdown', () => {
            this.showItemPopup(key, name);
        });

        // –ü—Ä–∏–≤—è–∑–∞—Ç—å –∫ —Å–ª–æ—Ç—É –∏ –º–∞—Å—Å–∏–≤—É
        freeSlot.item = itemSprite;
        this.inventory.items.push(itemSprite);

        // –î–æ–±–∞–≤–∏—Ç—å –≤ state.inventory, –µ—Å–ª–∏ –Ω–µ –≤–æ—Å—Å—Ç–∞–Ω–∞–≤–ª–∏–≤–∞–µ–º
        if (!restoring) {
            this.state.inventory.push({ key, name });
            if (this.journalSystem) {
                this.journalSystem.addEntry(`–ù–∞–π–¥–µ–Ω –ø—Ä–µ–¥–º–µ—Ç: ${name}`);
            }
        }

        return true;
    }

    openSafe() { // –û—Ç–∫—Ä—ã—Ç–∏–µ –∏–Ω—Ç–µ—Ä—Ñ–µ–π—Å–∞ —Å–µ–π—Ñ–∞
        this.codeInputGroup = this.add.group();

        let background = this.add.rectangle(350, 241, 400, 200, 0x000000, 0.8); // –°–æ–∑–¥–∞–Ω–∏–µ —Ñ–æ–Ω–∞ –¥–ª—è –∏–Ω—Ç–µ—Ä—Ñ–µ–π—Å–∞ —Å–µ–π—Ñ–∞
        this.codeInputGroup.add(background);

        let digitTexts = [];

        for (let i = 0; i < 4; i++) { // –°–æ–∑–¥–∞–Ω–∏–µ –ø–æ–ª–µ–π –¥–ª—è –≤–≤–æ–¥–∞ —Ü–∏—Ñ—Ä –∫–æ–¥–∞
            let digitText = this.add.text(250 + i * 50, 220, this.state.selectedDigits[i], { 
                fontSize: '32px', 
                fill: '#fff' 
            }).setInteractive();
            
            digitText.index = i;
            digitText.on('pointerdown', () => {
                this.incrementDigit(digitText);
            });
            
            this.codeInputGroup.add(digitText);
            digitTexts.push(digitText);
        }

        let instructions = this.add.text(250, 180, '–í—ã—Å—Ç–∞–≤—å—Ç–µ –∫–æ–¥:', { // –î–æ–±–∞–≤–ª–µ–Ω–∏–µ –∏–Ω—Å—Ç—Ä—É–∫—Ü–∏–∏
            fontSize: '24px', 
            fill: '#fff' 
        });
        this.codeInputGroup.add(instructions);

        let confirmButton = this.add.text(350, 280, '–û–ö', { // –°–æ–∑–¥–∞–Ω–∏–µ –∫–Ω–æ–ø–∫–∏ –ø–æ–¥—Ç–≤–µ—Ä–∂–¥–µ–Ω–∏—è
            fontSize: '32px', 
            fill: '#00ff00' 
        }).setInteractive();
        confirmButton.on('pointerdown', () => this.checkCode(digitTexts));
        this.codeInputGroup.add(confirmButton);

        let closeButton = this.add.text(450, 180, 'X', { // –°–æ–∑–¥–∞–Ω–∏–µ –∫–Ω–æ–ø–∫–∏ –∑–∞–∫—Ä—ã—Ç–∏—è
            fontSize: '32px', 
            fill: '#ff0000' 
        }).setInteractive();
        closeButton.on('pointerdown', () => this.closeCodeInput());
        this.codeInputGroup.add(closeButton);
    }

    incrementDigit(digitText) { // –£–≤–µ–ª–∏—á–µ–Ω–∏–µ –∑–Ω–∞—á–µ–Ω–∏—è —Ü–∏—Ñ—Ä—ã –≤ –∫–æ–¥–µ —Å–µ–π—Ñ–∞
        let currentDigit = parseInt(digitText.text);
        if (isNaN(currentDigit)) currentDigit = 0;
        currentDigit = (currentDigit + 1) % 10;  // –¶–∏–∫–ª–∏—á–µ—Å–∫–æ–µ –∏–∑–º–µ–Ω–µ–Ω–∏–µ –æ—Ç 0 –¥–æ 9
        digitText.setText(currentDigit.toString());
        this.state.selectedDigits[digitText.index] = currentDigit.toString();
    }

    checkCode(digitTexts) {
        try {
            // –ü–æ–ª—É—á–∞–µ–º –≤–≤–µ–¥–µ–Ω–Ω—ã–π –∫–æ–¥ –∏ –ø—Ä–∞–≤–∏–ª—å–Ω—ã–π –∫–æ–¥
            const enteredCode = this.state.selectedDigits.join('');
            const correctCode = GAME_CONFIG.safeCode.join('');
            console.log('–í–≤–µ–¥–µ–Ω–Ω—ã–π –∫–æ–¥:', enteredCode);
            console.log('–ü—Ä–∞–≤–∏–ª—å–Ω—ã–π –∫–æ–¥:', correctCode);
    
            if (enteredCode === correctCode) {
                // –í–∏–∑—É–∞–ª—å–Ω–∞—è –æ–±—Ä–∞—Ç–Ω–∞—è —Å–≤—è–∑—å - –ø–æ–¥—Å–≤–µ—Ç–∫–∞ –ø—Ä–∞–≤–∏–ª—å–Ω–æ–≥–æ –∫–æ–¥–∞ –∑–µ–ª–µ–Ω—ã–º
                digitTexts.forEach(digitText => 
                    digitText.setFill('#' + GAME_CONFIG.colors.success.toString(16))
                );
    
                // –ó–∞–∫—Ä—ã–≤–∞–µ–º –∏–Ω—Ç–µ—Ä—Ñ–µ–π—Å –≤–≤–æ–¥–∞ –∫–æ–¥–∞
                this.closeCodeInput();
    
                // –°–æ–∑–¥–∞–µ–º –≥—Ä—É–ø–ø—É –¥–ª—è –æ—Ç–∫—Ä—ã—Ç–æ–≥–æ —Å–µ–π—Ñ–∞ –∏ –∫–æ–ª—å—Ü–∞
                const safeGroup = this.add.group();
    
                // –°–æ–∑–¥–∞–µ–º –∑–∞—Ç–µ–º–Ω–µ–Ω–Ω—ã–π —Ñ–æ–Ω
                const safeBackground = this.add.rectangle(
                    350, 241,    // –∫–æ–æ—Ä–¥–∏–Ω–∞—Ç—ã —Ü–µ–Ω—Ç—Ä–∞
                    700, 482,    // —Ä–∞–∑–º–µ—Ä—ã
                    0x000000,    // —Ü–≤–µ—Ç
                    0.5         // –ø—Ä–æ–∑—Ä–∞—á–Ω–æ—Å—Ç—å
                ).setDepth(1000);
                safeGroup.add(safeBackground);
    
                // –ü–æ–∫–∞–∑—ã–≤–∞–µ–º –∏–∑–æ–±—Ä–∞–∂–µ–Ω–∏–µ –æ—Ç–∫—Ä—ã—Ç–æ–≥–æ —Å–µ–π—Ñ–∞
                const openSafeImage = this.add.image(350, 241, 'opensafe')
                    .setScale(0.8)
                    .setDepth(1001)
                    .setInteractive();
                safeGroup.add(openSafeImage);
    
                // –ù–∞—Ö–æ–¥–∏–º –æ–±—ä–µ–∫—Ç –∫–æ–ª—å—Ü–∞ –≤ —Å–ø–∏—Å–∫–µ –æ—Å—Ç–∞–≤—à–∏—Ö—Å—è –ø—Ä–µ–¥–º–µ—Ç–æ–≤
                const ringObject = this.state.remainingObjects.find(obj => obj.name === '–ö–æ–ª—å—Ü–æ');
                
                // –ï—Å–ª–∏ –∫–æ–ª—å—Ü–æ –Ω–∞–π–¥–µ–Ω–æ –≤ —Å–ø–∏—Å–∫–µ, –¥–µ–ª–∞–µ–º –µ–≥–æ –¥–æ—Å—Ç—É–ø–Ω—ã–º
                if (ringObject) {
                    ringObject.available = true;
                    ringObject.hidden = false; // –£–±–∏—Ä–∞–µ–º —Ñ–ª–∞–≥ —Å–∫—Ä—ã—Ç–æ—Å—Ç–∏
                    this.updateItemList(); // –û–±–Ω–æ–≤–ª—è–µ–º —Å–ø–∏—Å–æ–∫ –ø—Ä–µ–¥–º–µ—Ç–æ–≤ (—Ü–≤–µ—Ç –∏–∑–º–µ–Ω–∏—Ç—Å—è –Ω–∞ –±–µ–ª—ã–π)
                }
    
                // –ï—Å–ª–∏ –∫–æ–ª—å—Ü–æ –µ—â–µ –Ω–µ –±—ã–ª–æ –Ω–∞–π–¥–µ–Ω–æ –∏–≥—Ä–æ–∫–æ–º
                if (!this.state.ringFound) {
                    console.log('–°–æ–∑–¥–∞–µ–º –∫–æ–ª—å—Ü–æ...');
                    // –°–æ–∑–¥–∞–µ–º —Å–ø—Ä–∞–π—Ç –∫–æ–ª—å—Ü–∞ –≤ –æ—Ç–∫—Ä—ã—Ç–æ–º —Å–µ–π—Ñ–µ
                    this.ringObject = this.add.sprite(353, 236, 'object8')
                        .setDepth(1002)
                        .setInteractive();
                    this.ringObject.name = '–ö–æ–ª—å—Ü–æ';
                    
                    // –î–æ–±–∞–≤–ª—è–µ–º –æ–±—Ä–∞–±–æ—Ç—á–∏–∫ –∫–ª–∏–∫–∞ –Ω–∞ –∫–æ–ª—å—Ü–æ
                    this.ringObject.on('pointerdown', () => {
                        console.log('–ö–ª–∏–∫ –ø–æ –∫–æ–ª—å—Ü—É');
                        this.handleObjectClick(this.ringObject);
                        safeGroup.destroy(true); // –ó–∞–∫—Ä—ã–≤–∞–µ–º —Å–µ–π—Ñ –ø–æ—Å–ª–µ –≤–∑—è—Ç–∏—è –∫–æ–ª—å—Ü–∞
                    });
    
                    safeGroup.add(this.ringObject);
                    console.log('–ö–æ–ª—å—Ü–æ —Å–æ–∑–¥–∞–Ω–æ:', this.ringObject);
                }
    
                // –î–æ–±–∞–≤–ª—è–µ–º –æ–±—Ä–∞–±–æ—Ç—á–∏–∫ –∑–∞–∫—Ä—ã—Ç–∏—è —Å–µ–π—Ñ–∞
                openSafeImage.on('pointerdown', () => {
                    if (this.state.ringFound) {
                        safeGroup.destroy(true); // –ó–∞–∫—Ä—ã–≤–∞–µ–º —Å–µ–π—Ñ —Ç–æ–ª—å–∫–æ –µ—Å–ª–∏ –∫–æ–ª—å—Ü–æ —É–∂–µ –Ω–∞–π–¥–µ–Ω–æ
                    }
                });
    
                // –£–¥–∞–ª—è–µ–º –∑–∞–ø–∏—Å–∫—É —Å –∫–æ–¥–æ–º –∏–∑ –∏–Ω–≤–µ–Ω—Ç–∞—Ä—è
                this.removeFromInventory('list2');
    
            } else {
                // –í–∏–∑—É–∞–ª—å–Ω–∞—è –æ–±—Ä–∞—Ç–Ω–∞—è —Å–≤—è–∑—å - –ø–æ–¥—Å–≤–µ—Ç–∫–∞ –Ω–µ–ø—Ä–∞–≤–∏–ª—å–Ω–æ–≥–æ –∫–æ–¥–∞ –∫—Ä–∞—Å–Ω—ã–º
                digitTexts.forEach(digitText => 
                    digitText.setFill('#' + GAME_CONFIG.colors.error.toString(16))
                );
                
                // –ß–µ—Ä–µ–∑ —Å–µ–∫—É–Ω–¥—É —Å–±—Ä–∞—Å—ã–≤–∞–µ–º –∫–æ–¥ –∏ –≤–æ–∑–≤—Ä–∞—â–∞–µ–º –±–µ–ª—ã–π —Ü–≤–µ—Ç
                setTimeout(() => {
                    digitTexts.forEach(digitText => digitText.setFill('#fff'));
                    this.resetDigits(digitTexts);
                }, 1000);
            }
        } catch (error) {
            // –û–±—Ä–∞–±–æ—Ç–∫–∞ –≤–æ–∑–º–æ–∂–Ω—ã—Ö –æ—à–∏–±–æ–∫
            console.error('–û—à–∏–±–∫–∞ –≤ –º–µ—Ç–æ–¥–µ checkCode:', error);
            console.error(error.stack);
        }
    }

    resetDigits(digitTexts) { // –°–±—Ä–æ—Å –≤–≤–µ–¥–µ–Ω–Ω—ã—Ö —Ü–∏—Ñ—Ä –∫–æ–¥–∞
        this.state.selectedDigits = ["0", "0", "0", "0"];
        digitTexts.forEach((digitText, i) => {
            digitText.setText("0");
            this.state.selectedDigits[i] = "0";
        });
    }

    closeCodeInput() { // –ó–∞–∫—Ä—ã—Ç–∏–µ –∏–Ω—Ç–µ—Ä—Ñ–µ–π—Å–∞ –≤–≤–æ–¥–∞ –∫–æ–¥–∞
        if (this.codeInputGroup) {
            this.codeInputGroup.clear(true, true);
            this.codeInputGroup = null;
        }
    }

    updateItemList() {
        // –ü—Ä–æ–≤–µ—Ä—è–µ–º —Å—É—â–µ—Å—Ç–≤–æ–≤–∞–Ω–∏–µ —Å–ø–∏—Å–∫–∞ –ø—Ä–µ–¥–º–µ—Ç–æ–≤
        if (!this.itemList) return;
    
        // –î–µ–ª–∏–º –ø—Ä–µ–¥–º–µ—Ç—ã –Ω–∞ –¥–≤–µ –∫–æ–ª–æ–Ω–∫–∏
        const itemsPerColumn = Math.ceil(this.state.remainingObjects.length / 2);
        const leftColumnItems = this.state.remainingObjects.slice(0, itemsPerColumn);
        const rightColumnItems = this.state.remainingObjects.slice(itemsPerColumn);
    
        // –û—á–∏—â–∞–µ–º —Å—É—â–µ—Å—Ç–≤—É—é—â–∏–µ —Ç–µ–∫—Å—Ç–æ–≤—ã–µ –æ–±—ä–µ–∫—Ç—ã, –µ—Å–ª–∏ –æ–Ω–∏ –µ—Å—Ç—å
        if (this.itemTextObjects) {
            this.itemTextObjects.forEach(textObj => textObj.destroy());
        }
        this.itemTextObjects = [];

        const topPadding = 5; // –ú–∏–Ω–∏–º–∞–ª—å–Ω—ã–π –æ—Ç—Å—Ç—É–ø —Å–≤–µ—Ä—Ö—É
        const itemSpacing = 20; // –†–∞—Å—Å—Ç–æ—è–Ω–∏–µ –º–µ–∂–¥—É —ç–ª–µ–º–µ–Ω—Ç–∞–º–∏

        // –°–æ–∑–¥–∞–µ–º –∏–ª–∏ –æ–±–Ω–æ–≤–ª—è–µ–º —Ñ–æ–Ω
        if (!this.textBackground) {
            this.textBackground = this.add.rectangle(
                GAME_CONFIG.width / 2,
                topPadding,
                320,
                200,
                0x000000,
                0.8
            ).setOrigin(0.5, 0);
        }
        
        this.textBackground.setDepth(0);

        // –°–æ–∑–¥–∞–µ–º –æ—Ç–¥–µ–ª—å–Ω—ã–µ —Ç–µ–∫—Å—Ç–æ–≤—ã–µ –æ–±—ä–µ–∫—Ç—ã –¥–ª—è –∫–∞–∂–¥–æ–≥–æ –ø—Ä–µ–¥–º–µ—Ç–∞
        leftColumnItems.forEach((item, index) => {
            // –ü–æ–∑–∏—Ü–∏—è –¥–ª—è –ª–µ–≤–æ–π –∫–æ–ª–æ–Ω–∫–∏
            const x = GAME_CONFIG.width / 2 - 140;
            const y = topPadding + 10 + (index * itemSpacing);
            
            // –û–ø—Ä–µ–¥–µ–ª—è–µ–º —Å—Ç–∏–ª—å —Ç–µ–∫—Å—Ç–∞ –≤ –∑–∞–≤–∏—Å–∏–º–æ—Å—Ç–∏ –æ—Ç —Å–æ—Å—Ç–æ—è–Ω–∏—è –ø—Ä–µ–¥–º–µ—Ç–∞
            const textStyle = {
                fontSize: '13px',
                fill: this.getItemColor(item),
                textDecoration: this.state.foundObjects.includes(item.name) ? 'line-through' : ''
            };
            
            // –°–æ–∑–¥–∞–µ–º —Ç–µ–∫—Å—Ç–æ–≤—ã–π –æ–±—ä–µ–∫—Ç –¥–ª—è –ª–µ–≤–æ–≥–æ —ç–ª–µ–º–µ–Ω—Ç–∞
            const textItem = this.add.text(x, y, item.name, textStyle).setDepth(1);
            
            // –ï—Å–ª–∏ –ø—Ä–µ–¥–º–µ—Ç –Ω–∞–π–¥–µ–Ω, –¥–æ–±–∞–≤–ª—è–µ–º –∑–∞—á–µ—Ä–∫–∏–≤–∞–Ω–∏–µ
            if (this.state.foundObjects.includes(item.name)) {
                const strikethrough = this.add.graphics();
                strikethrough.lineStyle(1, 0x808080); // –°–µ—Ä–∞—è –ª–∏–Ω–∏—è
                strikethrough.lineBetween(
                    x, 
                    y + textItem.height / 2,
                    x + textItem.width,
                    y + textItem.height / 2
                );
                strikethrough.setDepth(2);
                this.itemTextObjects.push(strikethrough);
            }
            
            this.itemTextObjects.push(textItem);
            
            // –ï—Å–ª–∏ –µ—Å—Ç—å –ø—Ä–∞–≤—ã–π —ç–ª–µ–º–µ–Ω—Ç, —Å–æ–∑–¥–∞–µ–º –µ–≥–æ —Ç–æ–∂–µ
            if (rightColumnItems[index]) {
                const rightItem = rightColumnItems[index];
                const rightX = GAME_CONFIG.width / 2 + 20;
                
                // –û–ø—Ä–µ–¥–µ–ª—è–µ–º —Å—Ç–∏–ª—å —Ç–µ–∫—Å—Ç–∞ –¥–ª—è –ø—Ä–∞–≤–æ–≥–æ —ç–ª–µ–º–µ–Ω—Ç–∞
                const rightTextStyle = {
                    fontSize: '13px',
                    fill: this.getItemColor(rightItem),
                    textDecoration: this.state.foundObjects.includes(rightItem.name) ? 'line-through' : ''
                };
                
                // –°–æ–∑–¥–∞–µ–º —Ç–µ–∫—Å—Ç–æ–≤—ã–π –æ–±—ä–µ–∫—Ç –¥–ª—è –ø—Ä–∞–≤–æ–≥–æ —ç–ª–µ–º–µ–Ω—Ç–∞
                const rightTextItem = this.add.text(rightX, y, rightItem.name, rightTextStyle).setDepth(1);
                
                // –ï—Å–ª–∏ –ø—Ä–∞–≤—ã–π –ø—Ä–µ–¥–º–µ—Ç –Ω–∞–π–¥–µ–Ω, –¥–æ–±–∞–≤–ª—è–µ–º –∑–∞—á–µ—Ä–∫–∏–≤–∞–Ω–∏–µ
                if (this.state.foundObjects.includes(rightItem.name)) {
                    const strikethrough = this.add.graphics();
                    strikethrough.lineStyle(1, 0x808080); // –°–µ—Ä–∞—è –ª–∏–Ω–∏—è
                    strikethrough.lineBetween(
                        rightX,
                        y + rightTextItem.height / 2,
                        rightX + rightTextItem.width,
                        y + rightTextItem.height / 2
                    );
                    strikethrough.setDepth(2);
                    this.itemTextObjects.push(strikethrough);
                }
                
                this.itemTextObjects.push(rightTextItem);
            }
        });
    
        // –û—á–∏—â–∞–µ–º —Å—Ç–∞—Ä—ã–π —Ç–µ–∫—Å—Ç –≤ –æ—Å–Ω–æ–≤–Ω–æ–º –∫–æ–Ω—Ç–µ–π–Ω–µ—Ä–µ
        this.itemList.setText('');
    
        // –û–±–Ω–æ–≤–ª—è–µ–º –ø–æ–∑–∏—Ü–∏—é –æ—Å–Ω–æ–≤–Ω–æ–≥–æ –∫–æ–Ω—Ç–µ–π–Ω–µ—Ä–∞
        this.itemList.setPosition(GAME_CONFIG.width / 2, topPadding);
        this.itemList.setOrigin(0.5, 0);

        // –†–∞—Å—Å—á–∏—Ç—ã–≤–∞–µ–º –≤—ã—Å–æ—Ç—É —Å–æ–¥–µ—Ä–∂–∏–º–æ–≥–æ
        const contentHeight = (leftColumnItems.length * itemSpacing) + 20;
        
        // –û–±–Ω–æ–≤–ª—è–µ–º —Ä–∞–∑–º–µ—Ä –∏ –ø–æ–∑–∏—Ü–∏—é —Ñ–æ–Ω–∞
        this.textBackground.setSize(320, contentHeight);
        this.textBackground.setPosition(
            GAME_CONFIG.width / 2,
            topPadding
        );
    }

    // –î–æ–±–∞–≤—å—Ç–µ —ç—Ç–æ—Ç –≤—Å–ø–æ–º–æ–≥–∞—Ç–µ–ª—å–Ω—ã–π –º–µ—Ç–æ–¥ –≤ –∫–ª–∞—Å—Å
    getItemColor(item) {
    if (this.state.foundObjects.includes(item.name)) {
        return '#808080'; // –°–µ—Ä—ã–π —Ü–≤–µ—Ç –¥–ª—è –Ω–∞–π–¥–µ–Ω–Ω—ã—Ö –ø—Ä–µ–¥–º–µ—Ç–æ–≤
    }
    if (item.hidden && !item.available) {
        return '#ff0000'; // –ö—Ä–∞—Å–Ω—ã–π —Ü–≤–µ—Ç –¥–ª—è —Å–∫—Ä—ã—Ç—ã—Ö –Ω–µ–¥–æ—Å—Ç—É–ø–Ω—ã—Ö –ø—Ä–µ–¥–º–µ—Ç–æ–≤
    }
    return '#ffffff'; // –ë–µ–ª—ã–π —Ü–≤–µ—Ç –¥–ª—è –æ–±—ã—á–Ω—ã—Ö –ø—Ä–µ–¥–º–µ—Ç–æ–≤
    }

    removeFromInventory(itemKey) {
        // –ù–∞—Ö–æ–¥–∏–º —Å–ª–æ—Ç —Å –ø—Ä–µ–¥–º–µ—Ç–æ–º
        const slotIndex = this.inventory.slots.findIndex(slot => slot.item && slot.item.key === itemKey);
        if (slotIndex === -1) return false;

        // –£–¥–∞–ª—è–µ–º —Å–ø—Ä–∞–π—Ç –ø—Ä–µ–¥–º–µ—Ç–∞
        const itemSprite = this.inventory.slots[slotIndex].item;
        itemSprite.destroy();

        // –û—á–∏—â–∞–µ–º —Å–ª–æ—Ç
        this.inventory.slots[slotIndex].item = null;

        // –£–¥–∞–ª—è–µ–º –∏–∑ –º–∞—Å—Å–∏–≤–æ–≤
        this.inventory.items = this.inventory.items.filter(item => item !== itemSprite);
        this.state.inventory = this.state.inventory.filter(item => item.key !== itemKey);

        return true;
    }
    
    showObjectHint() {
        // –§–∏–ª—å—Ç—Ä—É–µ–º —Å–ø–∏—Å–æ–∫, –æ—Å—Ç–∞–≤–ª—è—è —Ç–æ–ª—å–∫–æ –Ω–µ–Ω–∞–π–¥–µ–Ω–Ω—ã–µ –ø—Ä–µ–¥–º–µ—Ç—ã
        const availableObjects = this.state.remainingObjects.filter(obj => 
            !this.state.foundObjects.includes(obj.name) && (!obj.hidden || obj.available)
        );
    
        if (availableObjects.length > 0) {
            // –í—ã–±–∏—Ä–∞–µ–º –æ–¥–∏–Ω —Å–ª—É—á–∞–π–Ω—ã–π –ø—Ä–µ–¥–º–µ—Ç –∏–∑ –¥–æ—Å—Ç—É–ø–Ω—ã—Ö
            const randomIndex = Math.floor(Math.random() * availableObjects.length);
            const hintObject = availableObjects[randomIndex];
            const sprite = this.children.list.find(child => child.name === hintObject.name);
    
            if (sprite) {
                const graphics = this.add.graphics();
                graphics.lineStyle(2, GAME_CONFIG.colors.hint, 1); // –ò—Å–ø–æ–ª—å–∑—É–µ–º –∑–æ–ª–æ—Ç–æ–π —Ü–≤–µ—Ç
                graphics.strokeRect(sprite.x - sprite.width / 2, sprite.y - sprite.height / 2, 
                                  sprite.width, sprite.height);
                graphics.fillStyle(GAME_CONFIG.colors.hint, 0.3); // –ü–æ–ª—É–ø—Ä–æ–∑—Ä–∞—á–Ω–∞—è –∑–∞–ª–∏–≤–∫–∞
                graphics.fillRect(sprite.x - sprite.width / 2, sprite.y - sprite.height / 2, 
                                  sprite.width, sprite.height);
    
                this.tweens.add({
                    targets: graphics,
                    alpha: 0,
                    duration: 1000,
                    onComplete: () => {
                        graphics.destroy();
                    }
                });
            }
        }
    }
    
    showNavigationHint() {
        // –ü–æ–ª—É—á–∞–µ–º —Ç–µ–∫—É—â—É—é –ª–æ–∫–∞—Ü–∏—é
        const currentLocation = locationPaths[this.location];
        let possibleDirections = [];
        
        // –°–æ–±–∏—Ä–∞–µ–º –≤—Å–µ –≤–æ–∑–º–æ–∂–Ω—ã–µ –Ω–∞–ø—Ä–∞–≤–ª–µ–Ω–∏—è
        if (currentLocation.forwardTo.length > 0) {
            possibleDirections = possibleDirections.concat(currentLocation.forwardTo);
        }
        if (currentLocation.backTo.length > 0) {
            possibleDirections = possibleDirections.concat(currentLocation.backTo);
        }
    
        if (possibleDirections.length > 0) {
            // –í—ã–±–∏—Ä–∞–µ–º —Å–ª—É—á–∞–π–Ω–æ–µ –Ω–∞–ø—Ä–∞–≤–ª–µ–Ω–∏–µ
            const randomDirection = possibleDirections[Math.floor(Math.random() * possibleDirections.length)];
            
            // –ù–∞—Ö–æ–¥–∏–º —Å–æ–æ—Ç–≤–µ—Ç—Å—Ç–≤—É—é—â—É—é –∑–æ–Ω—É –ø–µ—Ä–µ—Ö–æ–¥–∞
            const transition = locationMap[this.location].transitions[randomDirection];
            
            if (transition) {
                const points = transition.points;
                
                // –°–æ–∑–¥–∞–µ–º –ø–æ–¥—Å–≤–µ—Ç–∫—É –∑–æ–Ω—ã –ø–µ—Ä–µ—Ö–æ–¥–∞
                const graphics = this.add.graphics();
                graphics.lineStyle(2, GAME_CONFIG.colors.hint, 1);
                graphics.beginPath();
                graphics.moveTo(points[0].x, points[0].y);
                
                // –†–∏—Å—É–µ–º –∫–æ–Ω—Ç—É—Ä –∑–æ–Ω—ã
                points.forEach((point, index) => {
                    const nextPoint = points[(index + 1) % points.length];
                    graphics.lineTo(nextPoint.x, nextPoint.y);
                });
                
                graphics.closePath();
                graphics.strokePath();
                
                // –î–æ–±–∞–≤–ª—è–µ–º –ø–æ–ª—É–ø—Ä–æ–∑—Ä–∞—á–Ω—É—é –∑–∞–ª–∏–≤–∫—É
                graphics.fillStyle(GAME_CONFIG.colors.hint, 0.3);
                graphics.fillPath();
    
                // –ê–Ω–∏–º–∞—Ü–∏—è –∏—Å—á–µ–∑–Ω–æ–≤–µ–Ω–∏—è
                this.tweens.add({
                    targets: graphics,
                    alpha: 0,
                    duration: 1000,
                    onComplete: () => {
                        graphics.destroy();
                    }
                });
            }
        }
    }

    getItemListText() {
        const itemsPerColumn = Math.ceil(this.state.remainingObjects.length / 2);
        const leftColumnItems = this.state.remainingObjects.slice(0, itemsPerColumn);
        const rightColumnItems = this.state.remainingObjects.slice(itemsPerColumn);
    
        const leftColumn = leftColumnItems.map(obj => obj.name);
        const rightColumn = rightColumnItems.map(obj => obj.name);
        
        const maxLength = Math.max(
            ...leftColumn.map(item => item.length),
            ...rightColumn.map(item => item.length)
        );
    
        return leftColumn.map((item, index) => {
            const rightItem = rightColumn[index] || '';
            return `${item.padEnd(maxLength + 5)}${rightItem}`;
        }).join('\n');
    }

    createPopup({ 
        background = 'popup-bg',  
        content = '',            
        contentScale = 0.8,      
        onClose = null,          
        customWidth = 700,       
        customHeight = 482,      
        x = GAME_CONFIG.width / 2,  
        y = GAME_CONFIG.height / 2,  
        closeButton = true       
    } = {}) {
        if (this.popupGroup) {
            this.closePopup();
        }
    
        this.popupGroup = this.add.group();
    
        // –°–æ–∑–¥–∞–µ–º –∑–∞—Ç–µ–º–Ω–µ–Ω–∏–µ –Ω–∞ –≤–µ—Å—å —ç–∫—Ä–∞–Ω
        const darkOverlay = this.add.rectangle(
            GAME_CONFIG.width / 2,
            GAME_CONFIG.height / 2,
            GAME_CONFIG.width,
            GAME_CONFIG.height,
            0x000000,
            0.7
        ).setInteractive()
         .setDepth(102);
        this.popupGroup.add(darkOverlay);
    
        // –î–æ–±–∞–≤–ª—è–µ–º —Ñ–æ–Ω–æ–≤–æ–µ –∏–∑–æ–±—Ä–∞–∂–µ–Ω–∏–µ –ø–æ–ø–∞–ø–∞
        if (background) {
            const popupBackground = this.add.image(x, y, background)
                .setDepth(103)
                .setOrigin(0.5, 0.5);
            popupBackground.setDisplaySize(customWidth, customHeight);
            this.popupGroup.add(popupBackground);
        }
    
        // –ï—Å–ª–∏ –µ—Å—Ç—å –∫–æ–Ω—Ç–µ–Ω—Ç, –¥–æ–±–∞–≤–ª—è–µ–º –µ–≥–æ
        if (content) {
            const contentImage = this.add.image(x, y, content)
                .setInteractive()
                .setDepth(103)
                .setOrigin(0.5, 0.5);
            contentImage.setScale(contentScale);
            this.popupGroup.add(contentImage);
        }
    
        // –î–æ–±–∞–≤–ª—è–µ–º –∫–Ω–æ–ø–∫—É –∑–∞–∫—Ä—ã—Ç–∏—è
        if (closeButton) {
            const closeBtn = this.add.sprite(
                x + (customWidth / 2 - 20),
                y - (customHeight / 2 - 20),
                'close'
            ).setDepth(103);
            
            closeBtn.setScale(0.5);
            closeBtn.setInteractive();
            this.popupGroup.add(closeBtn);
    
            // –û–±—Ä–∞–±–æ—Ç—á–∏–∫–∏ –¥–ª—è –∫–Ω–æ–ø–∫–∏ –∑–∞–∫—Ä—ã—Ç–∏—è
            closeBtn.on('pointerover', () => {
                if (!closeBtn.isTinted) {
                    closeBtn.setTint(0xcccccc);
                }
            });
    
            closeBtn.on('pointerout', () => {
                if (this.popupGroup) {
                    closeBtn.clearTint();
                    closeBtn.setScale(0.5);
                }
            });
    
            closeBtn.on('pointerdown', () => {
                if (this.popupGroup) {
                    closeBtn.setScale(0.45);
                    closeBtn.setTint(0x999999);
                }
            });
    
            closeBtn.on('pointerup', () => {
                if (this.popupGroup) {
                    closeBtn.setScale(0.5);
                    closeBtn.clearTint();
                    this.closePopup();
                }
            });
        }
    
        // –û–±—Ä–∞–±–æ—Ç—á–∏–∫ –∫–ª–∏–∫–∞ –ø–æ –∑–∞—Ç–µ–º–Ω–µ–Ω–∏—é
        darkOverlay.on('pointerdown', () => {
            this.closePopup();
        });
    
        // –°–æ—Ö—Ä–∞–Ω—è–µ–º callback –∑–∞–∫—Ä—ã—Ç–∏—è
        if (onClose) {
            this.popupGroup.onClose = onClose;
        }
    
        return this.popupGroup;
    }
    
    closePopup() {
        if (!this.popupGroup) return;
        
        // –í—ã–∑—ã–≤–∞–µ–º callback –µ—Å–ª–∏ –æ–Ω –µ—Å—Ç—å
        if (this.popupGroup.onClose) {
            this.popupGroup.onClose();
        }
    
        this.popupGroup.clear(true, true);
        this.popupGroup = null;
    }
}

const config = {
    type: Phaser.AUTO,
    parent: 'game-container',
    scale: {
        mode: Phaser.Scale.FIT,
        autoCenter: Phaser.Scale.CENTER_BOTH,
        width: 1920,
        height: 1080
    },
    scene: [IntroScene, MainMenuScene, LoadingScene, GameScene, PauseMenuScene],
    physics: {
        default: 'arcade',
        arcade: {
            debug: false
        }
    }
};

// –ó–∞–ø—É—Å–∫ –∏–≥—Ä—ã
const game = new Phaser.Game(config);

// === ResourceLoader ===
// –ö–ª–∞—Å—Å –¥–ª—è –∑–∞–≥—Ä—É–∑–∫–∏ —Ä–µ—Å—É—Ä—Å–æ–≤. –û–Ω —É–ø—Ä–æ—â–∞–µ—Ç –ø—Ä–æ—Ü–µ—Å—Å –∑–∞–≥—Ä—É–∑–∫–∏ –∏–∑–æ–±—Ä–∞–∂–µ–Ω–∏–π –≤ —Å—Ü–µ–Ω–∞—Ö.
class ResourceLoader {
    constructor(scene) {
        this.scene = scene; // –°–æ—Ö—Ä–∞–Ω—è–µ–º —Å—Å—ã–ª–∫—É –Ω–∞ —Ç–µ–∫—É—â—É—é —Å—Ü–µ–Ω—É.
    }

    // –ú–µ—Ç–æ–¥ –¥–ª—è –∑–∞–≥—Ä—É–∑–∫–∏ —Ä–µ—Å—É—Ä—Å–æ–≤.
    loadResources(resourceCategories) {
        // –ü—Ä–æ—Ö–æ–¥–∏–º—Å—è –ø–æ –∫–∞–∂–¥–æ–π –∫–∞—Ç–µ–≥–æ—Ä–∏–∏ —Ä–µ—Å—É—Ä—Å–æ–≤.
        Object.entries(resourceCategories).forEach(([category, resources]) => {
            // –ó–∞–≥—Ä—É–∂–∞–µ–º –∫–∞–∂–¥—ã–π —Ä–µ—Å—É—Ä—Å –≤ –∫–∞—Ç–µ–≥–æ—Ä–∏–∏.
            resources.forEach(({ key, path }) => {
                this.scene.load.image(key, path); // –ó–∞–≥—Ä—É–∂–∞–µ–º –∏–∑–æ–±—Ä–∞–∂–µ–Ω–∏–µ –ø–æ –∫–ª—é—á—É –∏ –ø—É—Ç–∏.
            });
        });
    }
}
